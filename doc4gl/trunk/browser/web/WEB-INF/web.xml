<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Doc4GL Fgldocumenter web browser</display-name>
    <description>
        This application allow user to browse 4GL applications source code
        documentation, created with "fgldoc" tool, directly from an
        Informix database repository.
	</description>

    <servlet>
        <servlet-name>fgldocumenter</servlet-name>
        <servlet-class>pt.moredata.fgldocumenter.browser.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FgldocumenterServlet</servlet-name>
        <url-pattern>/fgldocumenter</url-pattern>
    </servlet-mapping>

</web-app>
