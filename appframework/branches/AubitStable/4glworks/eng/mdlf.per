attributes

f000 = formonly.code_mdl type smallint not null, autonext, reverse,
       include = (1 to 32000),
       comments = "Insert required code";
f001 = formonly.desc_mdl type char not null, autonext, reverse;
d    = formonly.dummy, invisible;
f010 = formonly.str_name type char not null, autonext, reverse, downshift,
       comments = "Insert required code or hit Ctrl-b for help";
f011 = formonly.desc_str, noentry;
f012 = formonly.str_attr type smallint, autonext, reverse,
       include = (null, 0 to 1000);
f013 = formonly.string, reverse,
       comments = "Write non printable characters as \ddd";
e    = formonly.d, invisible, noentry;

instructions

delimiters "  ";
screen record s_mdl[7] (str_name, desc_str, str_attr, string, d)

end
