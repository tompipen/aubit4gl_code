style "AppWindow" {
  	bg[NORMAL]       = "#dfdfdf"		#"antiquewhite2"
  	bg[ACTIVE]       = "#dfdfdf"		#"antiquewhite2"
    bg[ACTIVE]       = "#dfdfdf"
  	font_name = "@font_name"		#"monospace 8"
}


style "FormLabel" {
    bg[NORMAL]       = "#000000"
    bg[ACTIVE]       = "#ffffff"
