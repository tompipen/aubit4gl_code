#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common
#override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

4GLPC               =${ROOT}/bin/4glpc
#4GLPCFLAGS			=-verbose
ALL                 =${ROOT}/bin/loadmap

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}

#loadmap : ${ROOT}/bin/loadmap
${ROOT}/bin/loadmap : loadmap.4gl
#ifeq "${FCONVERT}" "yes"
#	${FCONVERT_CMD} $^
#endif
#	${FAIL_OK}${SH} ${4GLPC} ${4GLPCFLAGS} $^ -o $@
	(export DEBUG=ALL; ${ROOT}/bin/4glc -o$@ $<)

## ==================================================================
##                        Clean Targets
## ==================================================================

clean :
	${RM} loadmap loadmap.c loadmap.h core *.out *.glb *${SO_EXT} *.a  \
	*.o  *.bak .*.bak *.exe *.dll *.stackdump *.err *.base *.exp

