#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

CFLAGS		=-g -O2

DEFS-COMMON = \
			-DVERSION=\"3.0.1\" \
			-DSTDC_HEADERS=1 \
			-DHAVE_STRERROR=1 \
			-DHAVE_DLFCN_H=1 \
			-DHAVE_LIBDL=1 \
			-DSYS_ODBC_INI=\"/etc/odbc.ini\" \
			-DSYS_ODBCINST_INI=\"/etc/odbcinst.ini\" \
			-DPACKAGE=\"odbctest\"
#			-DPACKAGE=\"libiodbc\"


DEFS_V3		=${DEFS-COMMON} -DODBCVER=0x0350
#DEFS_V2	=${DEFS1} ${DEFS2} -DVERSION2
DEFS_V2		=${DEFS-COMMON} -DODBCVER=0x0200
#define ODBCVER					0x0351

ALL 		=shexec

#FIXME: what if we have PGODBC, IXFODBC, ODBC32 or ... instead of this?

ifneq "@HAVE_UNIXODBC@" "no"
	ALL 	+=odbctest-unixODBC
endif

ifneq "@HAVE_IODBC@" "no"
	ifeq "@IODBC_VERSION@" "???"
		ALL +=odbctest-iodbc2
    else
		ALL +=odbctest-iodbc3
    endif
endif

SOURCE		=odbctest.c

#This scripts rely on expect and need manual mods to parameters to work:
#autotest-ifx-iodbc
#autotest-pg-unix
#autotest-ifx-unix
#autotest-pg-iodbc

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo " "
	@echo "Default targets (${ALL}) compiled successfully"
	@echo "See examples of automated usage in autotest-* scripts."

odbctest-iodbc3: odbctest3.o
#	${CC} ${CFLAGS} -DODBCVER=0x0350 -o $@ $^ -L/opt/iODBC_3beta/iODBC/lib -liodbc
	${CC} ${CFLAGS} -o $@ $^ @IODBC_LFLAGS@ @IODBC_LIBS@
	cp $@ ../../bin

odbctest-iodbc2: odbctest2.o
#	${CC} ${CFLAGS} -DODBCVER=0x0350 -o $@ $^ -L/usr/openlink/lib -liodbc
	${CC} ${CFLAGS} -o $@ $^ @IODBC_LFLAGS@ @IODBC_LIBS@
	cp $@ ../../bin

odbctest-unixODBC: odbctest3.o
#	${CC} ${CFLAGS} -DODBCVER=0x0350 -o $@ $^ -L/opt/unixODBC/lib/ -lodbc
	${CC} ${CFLAGS} -o $@ $^ @UNIXODBC_LFLAGS@ @UNIXODBC_LIBS@
	cp $@ ../../bin

## ==================================================================
##                              Sub Targets
## ==================================================================

#FIXME: we are using this headers in ./ (-I./):
#sqltypes.h sql.h sqlext.h
#But we ahould be using this:
#@UNIXODBC_INCLUDE@
#@IODBC_INCLUDE@

#iODBC V2:
odbctest2.o:
#	${CC} $(DEFS_V2) ${CFLAGS} -I.. -I./ -c ${SOURCE} -o $@
	${CC} $(DEFS_V2) ${CFLAGS} -c ${SOURCE} -o $@

#iODBC V3 and unixODBC:
odbctest3.o:
#	${CC} $(DEFS_V3) ${CFLAGS} -I.. -I./ -c ${SOURCE} -o $@
	${CC} $(DEFS_V3) ${CFLAGS} -c ${SOURCE} -o $@

shexec:
	chmod a+x autotest*
#	autotest* cp  ../../bin

## ==================================================================
##                              Clean
## ==================================================================

clean:
	rm -f *.o *.bak odbctest-iodbc* odbctest-unixODBC

