#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

CFLAGS=-g -O2

DEFS-COMMON = -DPACKAGE=\"libiodbc\" -DSTDC_HEADERS=1 -DHAVE_STRERROR=1 \
			-DHAVE_DLFCN_H=1 -DHAVE_LIBDL=1 -DSYS_ODBC_INI=\"/etc/odbc.ini\" \
			-DSYS_ODBCINST_INI=\"/etc/odbcinst.ini\"


DEFS_V3= ${DEFS-COMMON} -DVERSION=\"3.0.1\" -DODBCVER=0x0350
#DEFS_V2= ${DEFS1} ${DEFS2} -DVERSION2
DEFS_V2= ${DEFS-COMMON} -DODBCVER=0x0200 #-DODBCVER=0x0350
#define ODBCVER					0x0351

ALL =shexec

if "@@"
	ALL +=odbctest-unixODBC
endif

if "@@"
	ALL +=odbctest-iodbc3
endif

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}

odbctest-iodbc3: odbctest3.o
	${CC} ${CFLAGS} -DODBCVER=0x0350 -o $@ $^ -L/opt/iODBC_3beta/iODBC/lib -liodbc

odbctest-iodbc2: odbctest2.o
	${CC} ${CFLAGS} -DODBCVER=0x0350 -o $@ $^ -L/usr/openlink/lib -liodbc

odbctest-unixODBC: odbctest3.o
	${CC} ${CFLAGS} -DODBCVER=0x0350 -o $@ $^ -L/opt/unixODBC/lib/ -lodbc

## ==================================================================
##                              Sub Targets
## ==================================================================

odbctest2.o:
	${CC} $(DEFS_V2) ${CFLAGS} -I.. -I./ -c odbctest.c -o $@

odbctest3.o:
	${CC} $(DEFS_V3) ${CFLAGS} -I.. -I./ -c odbctest.c -o $@

shexec:
	chmod a+x autotest*

## ==================================================================
##                              Clean
## ==================================================================

clean:
	rm -f *.o *.bak odbctest-iodbc* odbctest-unixODBC

