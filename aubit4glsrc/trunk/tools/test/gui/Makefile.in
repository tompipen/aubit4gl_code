#note: I plan to use amake for this; this is just for now

ROOT    =../../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common
#override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

ALL=forms 4gl

#no longer needed? (CHECK!)
#ADDFLAGS=-fnative-struct

IMAGES=aubit.xpm  img1.xpm  linux.xpm
FORMS.per=gui.per widget.per radio.per multi.per form-gui.per calc.per
FORMS.frm=${FORMS.per:.per=.frm}

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}

4gl: hello-gui game calc

hello-gui: hello-gui.4gl
	${FGLPCEXEC} $^ -o $@ ${ADDFLAGS}

game: gui.4gl
	${FGLPCEXEC} $^ -o $@ ${ADDFLAGS}

calc: calc.4gl
	${FGLPCEXEC} $^ -o $@ ${ADDFLAGS}

forms: ${FORMS.frm}

help:
	@echo "use 'make' to compile examples with GTK GUI"

%.frm: %.per
	${FCOMPILE} $^


## ==================================================================
##                              Clean
## ==================================================================

clean:
	$(RM) *.BAK *.bak core *~ *.ln *.output *.out *.frm *.h *.c *.o \
	*.hlp *.exe *.stackdump *.err gui hello-gui *.glb

