#note: I plan to use amake for this; this is just for now

#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

ifdef COMSPEC
	ifdef MONOLIT
		ADDFLAGS= -mno-cygwin
	endif
endif

ifneq "${AUBIT_BIN_INSTALL}" "1"
	FCOMPILE	=../../../bin/fcompile
	MKMESS      =../../../bin/mkmess
	FGLPCEXEC	=${SH} ../../../bin/4glpc
else
	FCOMPILE	=aubit fcompile
	MKMESS      =aubit mkmess
	FGLPCEXEC	=aubit 4glpc
endif

ALL=other 4gl regression.4gl regression.per 4glguionly

#no longer needed:
#ADDFLAGS=-fnative-struct
#ADDFLAGS=-verbose

## ==================================================================
##                              Targets
## ==================================================================

all: 4gl forms

4gl: demo game

menu:
	(mcompile menu.menu)
#	(mcompile -c menu.menu)

demo:
	(${FGLPCEXEC} -gtk hello-gui.4gl -o hello-gui ${ADDFLAGS})

game:
	(${FGLPCEXEC} -gtk gui.4gl -o gui ${ADDFLAGS})

forms:
	(${FCOMPILE} gui.per)
	(${FCOMPILE} widget.per)
	(${FCOMPILE} radio.per)
	(${FCOMPILE} multi.per)
	(${FCOMPILE} form-gui.per)

help:
	@echo "use 'make' to compile examples with GTK GUI"

clean:
	$(RM) *.BAK *.bak core *~ *.ln *.output *.out *.frm *.h *.c *.o
	${RM} *.hlp *.exe *.stackdump *.err
	${RM} gui hello-gui

#------------------------------- EOF ---------------------------
