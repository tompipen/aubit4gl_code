# Makefile for compiling the informix ESQL/C connection test.

#
# $Id: Makefile.in,v 1.9 2002-12-17 00:14:50 afalout Exp $
#

ROOT    =../../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                    Options
## ==================================================================

4GLPC	=${SH} ${ROOT}/bin/4glpc
ESQL	=@IFMX_ESQLC@
CFLAGS	+=-I${ROOT}/lib/libincl -L$(AUBITDIR)/lib


#informix_test.h
#fgl_dml_suite.4gl

OBJECTS	=test_informix_util.ec test_informix.o connection_suite.o \
		ddl_suite.o dml_suite.o

LIBS	=-lcheck -laubit4gl

ifeq "@HAS_CHECK@" "1"
	ifneq "${ESQL}" "no"
		ALL=test_informix
		#test_db.4ae
	else
		ALL=no_esql
	endif
else
	ALL=no_check
endif

.PHONY: all clean no_esql no_check

## ==================================================================
##                    Targets
## ==================================================================

all: ${ALL}
	@echo "Successfully compiled default targets: ${ALL}"

test_informix: ${OBJECTS}
	$(ESQL) $(CFLAGS) $^ -o $@ ${LIBS}

#cannot compile because fgl_ec_util.ec is not in CVS !!!!
test_db.4ae: fgl_dml_suite.4gl fgl_ec_util.o
	${4GLPC} $^ -o $@

fgl_ec_util.o: fgl_ec_util.ec
	$(ESQL) -c $^

no_esql:
	@echo "Configure did not found esql compiler - cannot compile tests."

no_check:
	@echo "Configure did not found 'check' library - cannot compile tests."

## ==================================================================
##                    Clean
## ==================================================================

clean:
	${RM} *.o test_informix *.exe *.bak *.out fgl_dml_suite.c fgl_dml_suite.h \
    test_informix_util.c

