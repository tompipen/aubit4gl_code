# Makefile for compiling the informix ESQL/C connection test.

#
# $Id: Makefile.in,v 1.7 2002-06-25 03:22:31 afalout Exp $
#

#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
#override NOINCL=0

## ==================================================================
##                    Options
## ==================================================================

ESQL=@IFMX_ESQLC@
CFLAGS	+=-I../../../lib/libincl -L$(AUBITDIR)/lib

OBJECTS	=test_informix_util.ec test_informix.o connection_suite.o \
		ddl_suite.o dml_suite.o

#THIS is wrong:
#LIBS	=-lcheck -laubit4gl -lRPC_NORPC -lSQL_esql
LIBS	=-lcheck -laubit4gl
# ...because RPC_NORPC and SQL_esql -- are loaded by libaubit4gl

#this is linked to libUI_TUI:
#-lncurses -lpanel -lform and should be @CURSES_LIB_NAME@
#this is linked to libUI_GTK:
#-lgtk -lgdk 
#This is loaded dynamically at run-time by libaubit4gl, one or the other:
#-lSQL_esql -lSQL_unixodbc

#FIXME: also test if we have -lcheck
ifneq "${ESQL}" "no"
	ALL=test_informix
else
	ALL=no_esql
endif

## ==================================================================
##                    Targets
## ==================================================================

ALL:

test_informix: ${OBJECTS}
	$(ESQL) $(CFLAGS) $^ -o $@ ${LIBS}

no_esql:
	@echo "Configure did not found esql compiler - cannot compile tests."

4gl: test_db.4ge
	
test_db.4ge: fgl_dml_suite.4gl fgl_ec_util.o
	4glpc fgl_dml_suite.4gl fgl_ec_util.o -o test_db.4ge

fgl_ec_util.o: fgl_ec_util.ec
	$(ESQL) -c fgl_ec_util.ec

## ==================================================================
##                    Clean
## ==================================================================

clean:
	rm -f *.o test_informix *.exe *.bak

