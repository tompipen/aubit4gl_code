#note: I plan to use amake for this; this is just for now

#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

#override MAKINGAUBIT=0

## ==================================================================
##                              Options
## ==================================================================

ifneq "${AUBIT_BIN_INSTALL}" "1"
	FCOMPILE	=../../bin/fcompile
	MKMESS      =../../bin/mkmess
	FGLPCEXEC	=${SH} ../../bin/4glpc
	MCOMPILE	=../../bin/mcompile
else
	FCOMPILE	=aubit fcompile
	MKMESS      =aubit mkmess
	FGLPCEXEC	=aubit 4glpc
	MCOMPILE	=aubit mcompile
endif


#4GLPCFLAGS		=-verbose -settings

ifdef COMSPEC
	ifdef MONOLIT
		4GLPCFLAGS += -mno-cygwin
	endif
endif


ifeq "$(ODBC)" "no"
	ifeq "$(ODBC_LINK)" "static"
		4GLPCFLAGS+= -noodbc
		4GLPCTESTFLAGS+= -noodbc
    endif
endif

#remove this:
4GLPCTESTFLAGS +=-I..


## ==================================================================
##                              Targets
## ==================================================================


#ALL=other 4gl regression.4gl regression.per
ALL=other 4gl


all: ${ALL}
	@echo default targets successfully compiled

4gl:
	@echo AUBITDIR in Makefile=${AUBITDIR}
	${FGLPCEXEC} ${4GLPCFLAGS} hello.4gl -o hello
	${FGLPCEXEC} ${4GLPCFLAGS} hello2.4gl -o hello2
	${FGLPCEXEC} ${4GLPCFLAGS} hello_db.4gl -o hello_db
	@echo 4gl targets successfully compiled

#this will fail unless you compiled Aubit compiler to enable PDF functionality:
pdf:
	${FGLPCEXEC} ${4GLPCFLAGS} -lpdf pdf_report.4gl -o pdf_report
	@echo PDF targets successfully compiled


#This is used from root makefile, to test id compiler is working after building it:
test.build:
	${RM} test_build.c test_build.h test_build.o test_build test_build.exe
	${FGLPCEXEC} -settings -verbose ${4GLPCTESTFLAGS} test_build.4gl -o test_build

test.perl:
	cd tools/test; 4glc_perl test_build.4gl
	cd tools/test; perl test_build.pl

filetest: file.4gl
	${FGLPCEXEC} ${4GLPCFLAGS} file.4gl -o filetest

#Move this to gui/
testmenu: testmenu-menu
	${FGLPCEXEC} ${4GLPCFLAGS} $@.4gl -o $@

testmenu-menu:
	${MCOMPILE} $@.menu

other:
	${FCOMPILE} form.per
	${MKMESS} helpfile
	@echo Other targets successfully compiled

## ==================================================================
##                          Help
## ==================================================================

help:
	@echo "use 'make' to compile examples"

## ==================================================================
##                           Clean targets
## ==================================================================


clean: clean.sub
	$(RM) *.BAK *.bak core *~ *.ln *.output *.out *.frm *.h *.o *.4ae \
	hello hello2 hello_db test_build filetest *.hlp *.exe *.stackdump *.exe \
	*.err *.c torturetest4glcomp *.tmp *.42m *.glb regression-test-4gl \
	*.42r gui/*.err pdf_report rr1.pdf gui/*.glb *.ao *.log *.4ge *.pl *.pm \
	test_build.c .\#* .*.bak

clean.sub:
ifneq "${AUBIT_BIN_INSTALL}" "1"
	${MAKE} -C regression clean
endif

