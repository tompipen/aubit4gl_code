#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                   Source files
## ==================================================================

#FIXME: does compile_c_gtk.o belong here, or in 4GLCAOBJ ?
4GLCOBJ_C		=compile_c.o compile_c_gtk.o

## ==================================================================
##                    Options
## ==================================================================

ifneq "${COMSPEC}" ""
	ALL         = dllLEX_C
else
	ALL         = libLEX_C.so
endif

CFLAGS			+=-I.. -I. -I../../libincl -I../../../compilers/fcompile -I../../../compilers/4glc/rules -I../../../compilers/4glc

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}

libLEX_C.so : ${4GLCOBJ_C}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../..

## ==================================================================
##                            Windows Targets
## ==================================================================

.PHONY : dllLEX_C
dllLEX_C: exportlib4glcomp ${4GLCOBJ_C}
	${MAKE} libLEX_C.dll DLLOBJS="${4GLCOBJ_C}" DLL_LDLIBS="${AUBIT_LIB} -lexportlib4glcomp" DLL_LDFLAGS="-L../../lib -L."
#see mod.c for list of variables that can't be automaticelly exported.

#${RPCLIB_NAME} -lFORM_XDR @CURSES_LIB_NAME@
# -lPDF_NOPDF
	${CP} libLEX_C.dll ../..
	${CP} libLEX_C.dll.a ../..

