ROOT        =../../..
LIBROOT     =../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                   Source files
## ==================================================================

#FIXME: does compile_c_gtk.o belong here, or in 4GLCAOBJ ?
4GLCOBJ_C		=compile_c.o compile_c_gtk.o

## ==================================================================
##                    Options
## ==================================================================

ifneq "${COMSPEC}" ""
	ALL         = dllLEX_C
else
	ALL         = ${LIBROOT}/libLEX_C${SO_EXT}
endif

CFLAGS			+=-I.. -I. -I${LIBROOT}/libincl -I${ROOT}/compilers/fcompile -I${ROOT}/compilers/4glc/rules -I${ROOT}/compilers/4glc

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}

${LIBROOT}/libLEX_C${SO_EXT} : ${4GLCOBJ_C}
	${LD} ${SO_LDFLAGS} -o $@ $^

## ==================================================================
##                            Windows Targets
## ==================================================================

.PHONY : dllLEX_C
dllLEX_C: exportlib4glcomp ${4GLCOBJ_C}
	${MAKE} libLEX_C.dll DLLOBJS="${4GLCOBJ_C}" DLL_LDLIBS="${AUBIT_LIB} -lexportlib4glcomp" DLL_LDFLAGS="-L${ROOT}/lib -L."
#see mod.c for list of variables that can't be automaticelly exported.

#${RPCLIB_NAME} -lFORM_XDR @CURSES_LIB_NAME@
# -lPDF_NOPDF
	${CP} libLEX_C.dll ${LIBROOT}
	${CP} libLEX_C.dll.a ${LIBROOT}

## ==================================================================
##                            Sub Targets
## ==================================================================

#../fcompile/form_x.h:
#	make -C ../fcompile rpc

## ==================================================================
##                            Dependencies
## ==================================================================

#rules/generated/kw.c: rules.t
#rules/generated/single_words.rule: rules.t
#rules/generated/y.tab.c: rules.t
#rules/generated/states.c: rules.t
#mod.o: mod.c ${Y_TAB_C}
#rules/generated/y.tab.o: ../fcompile/form_x.h


compile_c.c: ${ROOT}/compilers/4glc/rules/generated/kw.h ${ROOT}/compilers/4glc/rules/generated/y.tab.h

${ROOT}/compilers/4glc/rules/generated/kw.h ${ROOT}/compilers/4glc/rules/generated/y.tab.h:
	${MAKE} -C ${ROOT}/compilers/4glc rules.t


## ==================================================================
##                            Clean Targets
## ==================================================================

clean:
	${RM} *${SO_EXT} *.o *.err 4glc 4glc-noodbc *.a *.exe *.bak .\#* 4glp *.log *.dll *.dll.a


