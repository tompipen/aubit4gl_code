#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

libA4GL_file.so: libfile.4gl
	4glpc -as-dll libfile.4gl -o libA4GL_file.so
	cp libA4GL_file.so ../..


clean:
	rm -f *.out *.c *.h *.so *.err *.bak *.glb *.h