$POSTGRESDIR/bin/ecpg -ct  esql_simple_ecpg.ec 
rm libSQL_c_ecpg.so
rm ../../libSQL_c_ecpg.so
cc -c -I. -I.. -I$AUBITDIR/incl -I$POSTGRESDIR/include esql_simple_ecpg.c 
