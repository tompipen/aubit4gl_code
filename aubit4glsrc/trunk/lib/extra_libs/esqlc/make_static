esql -static helper_funcs.ec -I.. -I/home/aubit4gl/sourceforge/aubit4glsrc/incl -L/home/aubit4gl/sourceforge/aubit4glsrc/lib -laubit4gl --shared -o libESQL_INFORMIX.so
cp libESQL_INFORMIX.so ../..

export POSTGRESDIR=/usr/local/pgsql
export PATH=$PATH:/usr/local/pgsql/bin

echo "ECPG COMPILE"
ecpg -C INFORMIX -t helper_funcs.ec
echo "GCC COMPILE"

gcc -DDIALECT_POSTGRES -g -c -o helper_funcs_p.o helper_funcs.c -I$POSTGRESDIR/include -I/home/aubit4gl/sourceforge/aubit4glsrc/incl 

rm libesqlhelper_funcs_p.so
ld -L$AUBITDIR/lib -L$POSTGRESDIR/lib -laubit4gl --shared -o libESQL_POSTGRES.so -Bstatic helper_funcs_p.o 
#-lpq -lecpg_compat -lpgtypes -lecpg -lpgtypes -lecpg_compat -lecpg -lpgtypes -lecpg_compat -lecpg -lpq -lecpg

cp libESQL_POSTGRES.so ../..
