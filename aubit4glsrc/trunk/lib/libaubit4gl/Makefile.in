ROOT    	=../..
LIBROOT		=..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                              Source files
## ==================================================================

CMODS_PROJECT	=project.c


CMODS_API   = \
	API_ui.c API_exreport.c API_sql.c API_rpc.c \
	API_lex.c API_form.c API_menu.c API_msg.c API_packer.c

#In alphabetical order:
COMMONSRC= \
	builtin.c builtin_d.c \
	calldll.c conv.c \
	data_if.c dates.c dmy.c  datatypes.c \
	err.c error.c errfile.c extfile.c \
	fglwrap.c funcs_d.c function_call_stack.c \
	gtime.c gui_io.c gui.c \
	helper.c \
	io.c interval.c \
	keys.c \
	load.c dataio.c \
	match.c maths.c ops.c \
	others.c \
	pointers.c \
	read_dty.c report.c rexp2.c ${LIBROOT}/resource/resource.c \
	screen.c sleep.c stack.c string.c \
	translate.c

CMODS               =${COMMONSRC} ${LIBROOT}/generated/${CMODS_PROJECT} ${CMODS_API} debug.o
OBJS_API			=${CMODS_API:.c=.o}
OBJS				=${CMODS:.c=.o}

## ==================================================================
##                              Options
## ==================================================================

LIBINCL_PATH		=${LIBROOT}/libincl
INCL_PATH			=${ROOT}/incl

DLMAGIC				=${LIBROOT}/bin/dlmagic

ifdef COMSPEC
	ALL				+=dllaubit4gl
else
    ALL				+=${LIBROOT}/libaubit4gl${SO_EXT}
endif

CFLAGS              +=-I.

#we don't want -Wall in CFLAGS when compiling form_x_xdr.c because it would
#give us bunch of warnings about unised varibles, that we cannot fix
#because this file is generated by rpcgen:
CFLAGS_FORM_X_XDR_C =$(CFLAGS:%-Wall=%)

#we cannot compile API code with  -Wstrict-prototypes because we use
#static int (*func)	(); which need variable number of parameters:
CFLAGS_API_C 		=$(CFLAGS:%-Wstrict-prototypes=%)

ifeq "${NON_PEDANTIC_OK}" "1"
	CFLAGS_NO_PEDANTIC  =$(CFLAGS:%-pedantic=%)
else
	CFLAGS_NO_PEDANTIC  =${CFLAGS}
endif

#LCLINT_CFLAGS :=$($(CFLAGS:%${LCLINT_STRIP1}=%):%${LCLINT_STRIP2}=%)
LCLINT_CFLAGS   	=${C_IFLAGS}

LINK_LIBS           =-ldl -lm

ifeq "${TARGET_OS}" "solaris"
	LINK_LIBS		+=-lsocket
endif


## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) built successfully."

${LIBROOT}/libaubit4gl.so : $(OBJS)
	${LD} ${SO_LDFLAGS} -o $@ $^ ${LINK_LIBS}
#	${CP} $@ ..

## ==================================================================
##                       Windows 32 DLL Targets
## ==================================================================

.PHONY : dllaubit4gl
dllaubit4gl : $(OBJS)
	${MAKE} libaubit4gl.dll DLLOBJS="$^"
	${CP} libaubit4gl.dll ..
#	DLL_LDLIBS="${AUBIT_RPCLIBNAME} ${AUBIT_PDFLIBNAME}" DLL_LDFLAGS="@RPCLIB_LFLAGS@ -L."
#$RPCLIB_NAME

#libaubit4gl.def: $(OBJS) ${GUI_TUI}
#	dlltool --export-all --output-def $@ $^

#we need to make export library before we can make actuall dll, becaus eof cyclical dependencies
#between libSQL_xxx.dll and libaubit4gl.dll, since there can be no unresilved symols at link
#time on Windows when mailing dll:
#libaubit4gl.dll.a: $(OBJS) ${GUI_TUI}
#	dlltool --output-exp $@ $^

## ==================================================================
##                             Sub Targets
## ==================================================================

ci: $(CMODS)
	ci -l  $^

project.o: ../generated/${CMODS_PROJECT}
	${CC} ${CFLAGS} -c -o $@ $^

../generated/project.c:
	(cd ../../tools/project; ${SH} mkproject)

../generated/tmperrs.h :
	${SH} ../bin/mkerrors

../../compilers/fcompile/form_x_xdr.c  ../../compilers/fcompile/form_x.h:
	${MAKE} -C ../../compilers/fcompile rpc

../../compilers/fcompile/form_x_xdr.o: ../../compilers/fcompile/form_x_xdr.c
	${CC} ${CFLAGS_FORM_X_XDR_C} -c -o $@ $^

#initializer element is not computable at load time:
builtin.o: builtin.c
	${CC} ${CFLAGS_NO_PEDANTIC} -c -o $@ $*.c
stack.o: stack.c
	${CC} ${CFLAGS_NO_PEDANTIC} -c -o $@ $*.c


## ==================================================================
##                        Dependencies
## ==================================================================

error.c : ../generated/tmperrs.h
array.o: array.c ../../compilers/fcompile/form_x_xdr.c
API_ui.c: ../../compilers/fcompile/form_x.h
builtin.o: ../../compilers/fcompile/form_x.h


## ==================================================================
##                        Clean Targets
## ==================================================================

clean : clean.generated
	${RM} $(OBJS) $(OBJS_DEBUG) menu_x.h menu_x_xdr.c \
		form_x_xdr.c form_x.h project.c core \
		*.out *.glb *.so *.a  *.o  *.bak *.dll *.stackdump *.err \
		*.base *.exp libaubit4gl.def

clean.generated:
	${RM} ../generated/errdefs ../generated/tmperrs.h \
		../generated/project.c ../generated/project.o


## ==================================================================
##                         Other Targets
## ==================================================================

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ../../${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

api: ${OBJS_API}

#API_ui.c API_exreport.c API_sql.c API_rpc.c where created manually and
#have no coresponding .spec file

#created headers are included via a4gl_libaubit4gl_int.h

API_msg.c: API_msg.spec
	${SH} ${DLMAGIC} $^ > $@
	${SH} ${DLMAGIC} $^ -h > ${INCL_PATH}/a4gl_$*.h

API_packer.c: API_packer.spec
	${SH} ${DLMAGIC} $^ > $@
	${SH} ${DLMAGIC} $^ -h > ${INCL_PATH}/a4gl_$*.h

API_menu.c: API_menu.spec
	${SH} ${DLMAGIC} $^ > $@
	${SH} ${DLMAGIC} $^ -h > ${INCL_PATH}/a4gl_$*.h

API_form.c: API_form.spec
	${SH} ${DLMAGIC} $^ > $@
	${SH} ${DLMAGIC} $^ -h > ${INCL_PATH}/a4gl_$*.h

API_lex.c: API_lex.spec
	${SH} ${DLMAGIC} $^ > $@
	${SH} ${DLMAGIC} $^ -h > ${INCL_PATH}/a4gl_$*.h


API_%.o: API_%.c
	${CC} ${CFLAGS_API_C} -c -o $@ $^

debug.o: debug.c
	${CC} ${CFLAGS_API_C} -c -o $@ $^

