ROOT    =../../..
LIBROOT =../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                              Source files
## ==================================================================

#FIXME: extract writing functions from compilers/helpcpmpile/mkmess.c
#and create writemsg.c
CMODS 				=readmsg.c
OBJS				=${CMODS:.c=.o}

## ==================================================================
##                              Options
## ==================================================================

CFLAGS				+=-I.. -I${ROOT}/compilers/fcompile
ALL 				=${LIBROOT}/libMSG_NATIVE${SO_EXT}

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) built successfully."

${LIBROOT}/libMSG_NATIVE${SO_EXT} : ${OBJS}
	${LD} ${SO_LDFLAGS} -o $@ $^


## ==================================================================
##                       Windows 32 DLL Targets
## ==================================================================

.PHONY : dllFORM_XDR
dllFORM_XDR : ${CMODS_FORM_XDR}  ${ROOT}/compilers/fcompile/form_x.h
	${MAKE} libFORM_XDR.dll DLLOBJS="${CMODS_FORM_XDR}" DLL_LDLIBS="${RPCLIB_NAME} -laubit4gl" DLL_LDFLAGS="@RPCLIB_LFLAGS@ -L. -I${ROOT}/compilers/fcompile -I${ROOT}/incl"
	${CP} libFORM_XDR.dll ${LIBROOT}

## ==================================================================
##                             Sub Targets
## ==================================================================

ci: $(CMODS)
	ci -l  $^

## ==================================================================
##                        Dependencies
## ==================================================================


readmsg.o: ${ROOT}/compilers/fcompile/form_x.h

${ROOT}/compilers/fcompile/form_x.h:
	${MAKE} -C ${ROOT}/compilers/fcompile rpc


## ==================================================================
##                        Clean Targets
## ==================================================================

clean :
	${RM} $(OBJS) core *.out *.glb *${SO_EXT} *.a  *.o  *.bak *.exe *.dll \
	*.stackdump *.err *.base *.exp

## ==================================================================
##                         Other Targets
## ==================================================================

lclint: $(CMODS)
	-lclint -weak $(CFLAGS) $(CMODS) > lclint.log 2>&1
	@echo "see lclint.log for results"

