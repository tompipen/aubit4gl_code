#All stuff common to more then one Aubit compiler make file is there:
include ../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Source files
## ==================================================================

#This make file does not have it's own targets, it only invokes other
#make files

## ==================================================================
##                              Options
## ==================================================================

ALL 	=aubit-config libEXREPORT_NOPDF${SO_EXT} libaubit4gl${SO_EXT} \
		libRPC_NORPC${SO_EXT} libSQL_noodbc${SO_EXT} libFORM_NOFORM${SO_EXT} \
		libMENU_NOMENU${SO_EXT} libMSG_NATIVE${SO_EXT} libLEX_C${SO_EXT}


ifeq "$(GTKBUILD)" "yes"
	ALL += libUI_GTK${SO_EXT}
endif

ifneq "@HAVE_RPCLIB@" "0"
	ALL	+=libRPC_XDR${SO_EXT} libFORM_XDR${SO_EXT} libMENU_XDR${SO_EXT}
endif

ifneq "@XML_RPC@" "no"
	ALL	+=libRPC_XMLRPC${SO_EXT}
endif

ifneq "@IFMX_ESQLC@" "no"
	ALL +=libSQL_esql${SO_EXT}
endif

ifdef COMSPEC
	ALL	+=libSQL_odbc32${SO_EXT}
endif

ifeq "$(HAVE_IODBC)" "yes"
    ALL	+=libSQL_iodbc${SO_EXT}
endif

ifeq "$(HAVE_UNIXODBC)" "yes"
	ALL	+=libSQL_unixodbc${SO_EXT}
endif

ifneq "@HAVE_IFXODBC@" "no"
	ALL	+=libSQL_ifxodbc${SO_EXT}
endif

ifneq "@HAVE_PGODBC@" "no"
	ALL	+=libSQL_pgodbc${SO_EXT}
endif

ifeq "$(PDFBUILD)" "yes"
	ALL +=libEXREPORT_PDF${SO_EXT}
endif

ifneq "@PERLBUILD@" "no"
	ALL +=libLEX_PERL${SO_EXT}
endif



## ==================================================================
##                              Targets
## ==================================================================

all: note ${ALL}
	@echo "Default targets (${ALL}) built successfully."

note:
	@echo "Building: ${ALL}"

## ==================================================================
##              Windows 32 DLL Targets in sub-makefiles
## ==================================================================

libSQL_noodbc.dll:
	${MAKE} -C libsql/nosql nosql.dll

libSQL_odbc32.dll:
	${MAKE} -C libsql/odbc odbc32

libEXREPORT_NOPDF.dll:
	${MAKE} -C libpdf NOPDF.dll

libUI_GTK.dll:
	${MAKE} -C libgui

libaubit4gl.dll :
	${MAKE} -C libaubit4gl $@

libFORM_XDR.dll :
	${MAKE} -C libform/form_xdr $@

libFORM_NOFORM.dll :
	${MAKE} -C libform/form_xdr dllFORM_NOFORM

libMENU_XDR.dll :
	${MAKE} -C libmenu/menu_xdr dllMENU_XDR

libMENU_NOFORM.dll :
	${MAKE} -C libmenu/menu_xdr dllMENU_NOFORM

libRPC_XDR.dll:
	${MAKE} -C librpc/sun_rpc dlllibRPC_XDR

libRPC_NORPC.dll:
	${MAKE} -C librpc/sun_rpc dlllibRPC_NORPC

libRPC_XMLRPC.dll:
	${MAKE} -C librpc/xml_rpc dlllibRPC_XMLRPC


## ==================================================================
##                       Targets in sub-makefiles
## ==================================================================

libLEX_C.so:
	${MAKE} -C liblex/lex_c

libLEX_PERL.so:
	${MAKE} -C liblex/lex_perl

libMSG_NATIVE.so:
	${MAKE} -C libmsg/msg_native

libUI_GTK.so:
	$(MAKE) -C libgui

aubit-config:
	${MAKE} -C resource

loadmap:
	${FAIL_OK}${MAKE} -C ../tools/loadmap

libaubit4gl.so :
	${MAKE} -C libaubit4gl $@

libFORM_NOFORM.so :
	${MAKE} -C libform/form_xdr $@

libFORM_XDR.so :
	${MAKE} -C libform/form_xdr $@

libMENU_NOMENU.so :
	${MAKE} -C libmenu/menu_xdr $@

libMENU_XDR.so :
	${MAKE} -C libmenu/menu_xdr $@

libEXREPORT_PDF.so:
	${MAKE} -C libpdf $@

libEXREPORT_NOPDF.so:
	${MAKE} -C libpdf $@

libSQL_noodbc.so:
	${MAKE} -C libsql/nosql nosql.so

libSQL_iodbc.so:
	${MAKE} -C libsql/odbc iodbc

libSQL_unixodbc.so:
	${MAKE} -C libsql/odbc unixodbc

libSQL_esql${SO_EXT}:
	${MAKE} -C libsql/esqlc

libSQL_ifxodbc.so:
	${MAKE} -C libsql/odbc ifxodbc

libSQL_pgodbc.so:
	${MAKE} -C libsql/odbc pgodbc

libRPC_XDR.so:
	${MAKE} -C librpc/sun_rpc $@

libRPC_NORPC.so:
	${MAKE} -C librpc/sun_rpc $@

libRPC_XMLRPC.so:
	${MAKE} -C librpc/xml_rpc $@

## ==================================================================
##                        Clean Targets
## ==================================================================

clean : clean.generated clean.libsql clean.libpdf clean.libincl clean.librpc clean.other
	${RM} core *.out *.glb *.so *.a  *.bak *.dll *.stackdump *.err *.base *.exp

clean.generated:
	${RM} generated/errdefs generated/tmperrs.h \
	generated/project.c generated/project.o

clean.all: clean
	${MAKE} -C libgui clean
	${MAKE} -C libtui clean

clean.libincl:
	${RM} libincl/*.bak

clean.libsql:
	${MAKE} -C libsql/nosql clean
	${MAKE} -C libsql/odbc clean
	${MAKE} -C libsql/esqlc clean

clean.libpdf:
	${MAKE} -C libpdf clean

clean.librpc:
	${MAKE} -C librpc/sun_rpc clean
	${MAKE} -C librpc/xml_rpc clean

clean.other:
	${MAKE} -C libaubit4gl clean
	${MAKE} -C libform/form_xdr clean
	${MAKE} -C libmenu/menu_xdr clean
	${MAKE} -C libmsg/msg_native clean
	${MAKE} -C resource clean
	${MAKE} -C ../tools/loadmap clean
	${MAKE} -C liblex/lex_c clean
	${MAKE} -C liblex/lex_perl clean

## ==================================================================
##                         Other Targets
## ==================================================================

lclint: $(CMODS)
	-lclint -weak $(CFLAGS) $(CMODS) > lclint.log 2>&1
	@echo "see lclint.log for results"

