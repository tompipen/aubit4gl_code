aclshared-noodbc.so:  $(OBJSNOSQL) gui_tui.o
	touch libaclshared-noodbc.so
	rm libaclshared-noodbc.so
	ld  -fPIC -shared $(OBJSNOSQL) gui_tui.o -o aclshared-noodbc.so #-lform -lpanel -lncurses -Map  mapfile
#FIXME: remove this ln:
	ln aclshared-noodbc.so libaclshared-noodbc.so

aclsharedgui-noodbc.so: $(OBJSNOSQL) gui_gtk.o
	touch libaclsharedgui-noodbc.so
	rm libaclsharedgui-noodbc.so
	ld  -fPIC -shared $(OBJSNOSQL) gui_gtk.o -o aclsharedgui-noodbc.so #-lform -lpanel -lncurses -Map  mapfile
#FIXME: remove this ln:
	ln aclsharedgui-noodbc.so libaclsharedgui-noodbc.so

