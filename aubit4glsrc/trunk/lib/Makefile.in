## ==================================================================
##                        Clean Targets
## ==================================================================

clean : \
	clean.generated clean.libsql clean.libpdf clean.libincl clean.librpc \
	clean.other clean.libui clean.libmenu clean.libform clean.libpacker
	${RM} core *.out *.glb *${SO_EXT} *.a  *.bak *.dll *.stackdump *.err *.base *.exp \
    bin/*.bak liblex/*.bak libpacker/*.bak libsql/*.bak

clean.generated:
	${RM} generated/errdefs generated/tmperrs.h \
	generated/project.c generated/project.o generated/.*.bak

clean.all: clean

clean.libui:
	${MAKE} -C libui/ui_gtk clean
	${MAKE} -C libui/ui_console clean
	${MAKE} -C libui/ui_curses clean

clean.libincl:
	${RM} libincl/*.bak

clean.libsql:
	${MAKE} -C libsql/nosql clean
	${MAKE} -C ${LIBSQLODBC_PATH} clean
	${MAKE} -C libsql/esqlc clean
	${MAKE} -C libsql/postgresql clean

clean.libpdf:
	${MAKE} -C libpdf clean

clean.librpc:
	${MAKE} -C librpc/no_rpc clean
	${MAKE} -C librpc/sun_rpc clean
	${MAKE} -C librpc/xml_rpc clean

clean.libmenu:
	${MAKE} -C ${LIBMENUNOMENU_PATH} clean
	${MAKE} -C ${LIBMENUGENERIC_PATH} clean
	${MAKE} -C ${LIBMENUXDR_PATH} clean

clean.libform:
	${MAKE} -C libform/form_xdr clean
	${MAKE} -C libform/noform clean
	${MAKE} -C libform/form_generic clean

clean.libpacker:
	${MAKE} -C ${LIBPACKERPACKED_PATH} clean
	${MAKE} -C ${LIBPACKERPERL_PATH} clean
	${MAKE} -C ${LIBPACKERXDR_PATH} clean
	${MAKE} -C ${LIBPACKERXML_PATH} clean

clean.other:
	${MAKE} -C ${LIBAUBIT4GL_PATH} clean
	${MAKE} -C libmsg/msg_native clean
	${MAKE} -C resource clean
	${MAKE} -C ${ROOT}/tools/loadmap clean
	${MAKE} -C ${LIBLEXC_PATH} clean
	${MAKE} -C ${LIBLEXPERL_PATH} clean
	${MAKE} -C libexdata clean

