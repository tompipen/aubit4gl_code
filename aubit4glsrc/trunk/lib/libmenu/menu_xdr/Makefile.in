## ==================================================================
##                       Windows 32 DLL Targets
## ==================================================================

.PHONY : dllMENU_XDR
dllMENU_XDR : ${CMODS_MENU_XDR}  ../compilers/menus/menu_x.h
	${MAKE} libMENU_XDR.dll DLLOBJS="${CMODS_MENU_XDR}" DLL_LDLIBS="${RPCLIB_NAME} -laubit4gl" DLL_LDFLAGS="@RPCLIB_LFLAGS@ -L. -I../compilers/menus -I../incl"
	${CP} libMENU_XDR.dll ../..

.PHONY : dllMENU_NOMENU
dllMENU_NOMENU : ${CMODS_MENU_NOMENU}
	${MAKE} libMENU_NOMENU.dll DLLOBJS="$^"
	${CP} libMENU_NOMENU.dll ../..

## ==================================================================
##                             Sub Targets
## ==================================================================

ci: $(CMODS)
	ci -l  $^

../../../compilers/menus/menu_x_xdr.c  ../../../compilers/menus/menu_x.h:
	${MAKE} -C ../../../compilers/menus rpc

## ==================================================================
##                        Dependencies
## ==================================================================

../../../compilers/menus/menu_x_xdr.o: ../../../compilers/menus/menu_x.h

#error.c : generated/tmperrs.h
#array.o: array.c ../compilers/fcompile/form_x_xdr.c
#builtin.c: ../compilers/fcompile/form_x.h

## ==================================================================
##                        Clean Targets
## ==================================================================

clean :
	${RM} $(OBJS) $(OBJS_DEBUG) menu_x.h menu_x_xdr.c \
	form_x_xdr.c form_x.h project.c aubit-config \
	loadmap loadmap.c loadmap.h core \
	*.out *.glb *.so *.a  *.o  *.bak *.exe *.dll *.stackdump *.err \
	*.base *.exp libaubit4gl.def


## ==================================================================
##                         Other Targets
## ==================================================================

lclint: $(CMODS)
	-lclint -weak $(CFLAGS) $(CMODS) > lclint.log 2>&1
	@echo "see lclint.log for results"

