#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Source files
## ==================================================================

#CMODS_PROJECT	=project.c

#require XDR frunctions, part of Sun RPClib:
CMODS_MENU_XDR		=../../../compilers/menus/menu_x_xdr.c loadmenu.c menuwrite.c

CMODS_MENU_NOMENU	=menu_nomenu.c

#CMODS 				=${CMODSNOSQL} ${CMODS_DLSQL}
#OBJS				=${CMODS:.c=.o} ${CMODS_PROJECT:.c=.o}
OBJS_MENU_NOMENU  	=${CMODS_MENU_NOMENU:.c=.o}
OBJS_MENU_XDR     	=${CMODS_MENU_XDR:.c=.o}

## ==================================================================
##                              Options
## ==================================================================


#FIXME: libMENU should not depend on GTK: one day, it should work
#with Swing or Qt just as well

ifneq "$(GLIBVER)" "old"
	ifneq "$(GLIBVER)" "" #GLIBVER was manualy specified
		ifneq "@PKG_CONFIG@" "no" #PKG_CONFIG
			GTKLIB_CFLAGS	:=$(shell @PKG_CONFIG@ --cflags $(GLIBVER))
			GDKLIB_CFLAGS	:=$(shell @PKG_CONFIG@ --cflags $(GDKVER))
        endif
		GLIB_CFLAGS		=$(GTKLIB_CFLAGS) $(GDKLIB_CFLAGS) -I${GTKPATH}/include
    else #GLIBVER is empty
		ifneq "@GTK_CONFIG@" "no" #GTK_CONFIG
			GLIB_CFLAGS		:=$(shell @GTK_CONFIG@ --cflags)
			xxGTKLIBS		:=$(shell @GTK_CONFIG@ --libs)
			#we cannot have -rdynamic and -shared at the same time:
			GTKLIBS			=$(subst -rdynamic,,${xxGTKLIBS})
        else
			ifneq "@PKG_CONFIG@" "no" #PKG_CONFIG
                #for this we already set CFLAGS in configure
				#GLIB_CFLAGS		:=$(shell @PKG_CONFIG@ --cflags glib)
				#GLIB_CFLAGS		:=$(shell @PKG_CONFIG@ --cflags @GTK_NAME@)
				#-lgtk -lgdk -lgmodule-1.3 -lglib-1.3 -liconv -lintl
				#GLIB_LIBS		:=$(shell @PKG_CONFIG@ --libs-only-l gtk+-1.3-win32-production)
            endif
        endif
    endif
else #GLIBVER="old"
	GLIB_CFLAGS=-I/usr/lib/glib/include
	ifdef COMSPEC
		GLIB_CFLAGS+=-I/usr/src/gtk+ -I/usr/src/gtk+/gdk -I/usr/src/glib
    else
		GLIB_CFLAGS+=-I/usr/include/gtk-1.2 -I/usr/include/glib-1.2
    endif
endif

CFLAGS+=-I../libincl -I../../incl -I.. ${GLIB_CFLAGS} @GTK_INC_PATH@ @GTK_LIB_PATH@ -I../../compilers/menus -I../../compilers/fcompile




ifdef COMSPEC
	ALL=dllMENU_NOMENU
	ifneq "@HAVE_RPCLIB@" "0"
		ALL			+=dllMENU_XDR
    endif
else
	ALL=libMENU_NOMENU${SO_EXT}
	ifneq "@HAVE_RPCLIB@" "0"
		ALL			+=libMENU_XDR${SO_EXT}
    endif
endif

#This must NOT be += because it would place affitional parameters AFTER
#existing parameters already in CFLAGS: we must not do this, because if
#specific path is needed to RPClib, it MUST be BEFORE other potenitially
#conflicting paths:
CFLAGS	:=@RPCLIB_INCLUDE@ @RPCLIB_LFLAGS@ -I../../../compilers/menus -I../../libincl ${CFLAGS} -I../../../compilers/menus -I../../libgui

## RPC type and XDR are not the same thing. RPC type represents Remote
#Procedure Call in Aubit, that can be Sun RPC or XML-RPC (at the moment),
#but regardless of that, XDR functions (also conatained in Sun RPC libraries)
#are needed by forms and menus functionality, and without it user would not
#ba able to compile or open forms and menus, since they compiled output
#file format is outpudte in XDR format for portability:

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) built successfully."

libMENU_NOMENU.so : ${OBJS_MENU_NOMENU}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../..

libMENU_XDR.so : ${OBJS_MENU_XDR}
	${LD} ${SO_LDFLAGS} @GTK_LIB_PATH@ @GTKLIBS@ ${GTKLIBS} ${RPCLIB_NAME} -o $@ $^
	${CP} $@ ../..



