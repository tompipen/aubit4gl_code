#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Source files
## ==================================================================

CMODS           =aubit-config.c resource.c
OBJS      		=${CMODS:.c=.o}

## ==================================================================
##                              Options
## ==================================================================

#CFLAGS			+= -I../compilers/fcompile -Ilibincl ${CFLAGS}
EXE_CFLAGS      +=-I../libincl
CFLAGS          +=-I../libincl -I../../compilers/fcompile -I../libaubit4gl

## ==================================================================
##                              Targets
## ==================================================================

aubit-config: ${OBJS}
	${CC} ${EXE_CFLAGS} -I../libincl -o $@ $^
	${CP} $@ ../../bin


## ==================================================================
##                           Dependencies
## ==================================================================

resource.o: ../../compilers/fcompile/form_x.h

../../compilers/fcompile/form_x.h:
	${MAKE} -C ../../compilers/fcompile rpc


## ==================================================================
##                        Clean Targets
## ==================================================================

clean :
	${RM} $(OBJS) $(OBJS_DEBUG) menu_x.h menu_x_xdr.c project.c \
    loadmap loadmap.c loadmap.h core aubit-config *.out *.glb *${SO_EXT} *.a  \
	*.o  *.bak .*.bak *.exe *.dll *.stackdump *.err *.base *.exp libaubit4gl.def


