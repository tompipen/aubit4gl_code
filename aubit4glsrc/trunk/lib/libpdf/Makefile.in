ROOT        =../..
LIBROOT     =..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                              Options
## ==================================================================

CFLAGS+=-I${LIBROOT}/libincl -I${ROOT}/compilers/fcompile @PDFLIB_I_FLAGS@ @PDFLIB_L_FLAGS@

ifneq "${COMSPEC}" ""
    ALL 		=NOPDF.dll
	ifneq "${PDFBUILD}" "no"
	    ALL 	+=PDF.dll
	endif
else
	ALL 		=${LIBROOT}/libEXREPORT_NOPDF${SO_EXT}
	ifneq "${PDFBUILD}" "no"
	    ALL 	+=${LIBROOT}/libEXREPORT_PDF${SO_EXT}
	endif
endif

OBJECTS_NOPDF	=nopdf.o
OBJECTS_PDF		=has_pdf.o

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}

${LIBROOT}/libEXREPORT_PDF${SO_EXT}: ${OBJECTS_PDF}
	${LD} @PDFLIB_L_FLAGS@ -lpdf $(SO_LDFLAGS) ${OBJECTS_PDF} -o $@

${LIBROOT}/libEXREPORT_NOPDF${SO_EXT}: ${OBJECTS_NOPDF}
	${LD} $(SO_LDFLAGS) ${OBJECTS_NOPDF} -o $@

NOPDF.dll: ${OBJECTS_NOPDF}
	${MAKE} libEXREPORT_NOPDF.dll DLLOBJS="${OBJECTS_NOPDF}"
	${CP} libEXREPORT_NOPDF.dll ${LIBROOT}
	${CP} libEXREPORT_NOPDF.dll.a ${LIBROOT}

PDF.dll:
	@echo "Ooops: PDFlib on Windows?"


## ==================================================================
##                              Clean
## ==================================================================

clean:
	${RM} *.o *${SO_EXT} *.bak *.base *.dll *.def *.exp *.a


