ifneq "${COMSPEC}" ""
	ifeq "${PDFBUILD}" "no"
	    ALL = NOPDF.dll
	else
	    ALL = PDF.dll NOPDF.dll
	endif
else
	ifeq "${PDFBUILD}" "no"
	    ALL = libPDF_NOPDF.so
	else
	    ALL = libPDF_PDF.so libPDF_NOPDF.so
	endif
endif

#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

override NOINCL=0

OBJECTS_NOPDF	=nopdf.o
OBJECTS_PDF		=has_pdf.o

## ==================================================================
##                              Options
## ==================================================================

override CFLAGS+=-I.. -I../../compilers/fcompile @PDFLIB_I_FLAGS@ @PDFLIB_L_FLAGS@

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}

libPDF_PDF.so: ${OBJECTS_PDF}
	ld @PDFLIB_L_FLAGS@ -lpdf $(SO_LDFLAGS) ${OBJECTS_PDF} -o $@
	cp $@ ..

libPDF_NOPDF.so: ${OBJECTS_NOPDF}
	ld  $(SO_LDFLAGS) ${OBJECTS_NOPDF} -o $@
	cp $@ ..

NOPDF.dll: ${OBJECTS_NOPDF}
	${MAKE} libPDF_NOPDF.dll DLLOBJS="${OBJECTS_NOPDF}"
	cp libPDF_NOPDF.dll ..
	cp libPDF_NOPDF.dll.a ..


## ==================================================================
##                              Clean
## ==================================================================

clean:
	rm -f *.o *.so *.bak *.base *.dll *.def *.exp *.a


