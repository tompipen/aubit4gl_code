ROOT        =../..
LIBROOT     =..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                              Options
## ==================================================================

CMODS   			=mpz.c
OBJS				=${CMODS:.c=.o}
ALL     			=libEXDTYPE_mpz${SO_EXT}

LCLINT_CFLAGS   	=${C_IFLAGS}
LOCAL_IFLAGS        =-I${ROOT}/incl -I${ROOT}/compilers/fcompile -I.

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}


libEXDTYPE_mpz${SO_EXT} : ${CMODS}
#	${CC} -g -c $^ ${LOCAL_IFLAGS}
	${CC} ${CFLAGS} -c $^ ${LOCAL_IFLAGS}
	${LD} $(SO_LDFLAGS) -o $@ ${OBJS} -lgmp
	${CP} $@ ${LIBROOT}


## ==================================================================
##                              Clean
## ==================================================================

clean:
	${RM} *${SO_EXT} *.bak *.o


## ==================================================================
##                         Other Targets
## ==================================================================

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ../../${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"


