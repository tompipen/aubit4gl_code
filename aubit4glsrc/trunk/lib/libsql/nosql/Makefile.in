#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

override CFLAGS+=-I../.. -I../../../compilers/fcompile @RPCLIB_INCLUDE@

ifeq "$COMSPEC" ""
    ALL=nosql.so
else
    ALL=nosql.dll
endif

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}


nosql.so: libSQL_nosql.so
libSQL_nosql.so: nosql.o
	ld  ${SO_LDFLAGS} $^ -o $@
	cp $@ ../..

nosql.dll: nosql.o
	${MAKE} libSQL_nosql.dll DLLOBJS="$^" DLL_LDLIBS="-laclshared" DLL_LDFLAGS="-L../.."
	cp libSQL_nosql.dll ../..
	cp libSQL_nosql${DLL_EXPORTLIB_EXT} ../..


## ==================================================================
##                              Clean
## ==================================================================


clean:
	rm -f *.o *.so *.bak *.base *.dll *.def *.exp *.a

