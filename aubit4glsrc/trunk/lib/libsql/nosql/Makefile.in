ROOT    =../../..
LIBROOT =../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common


## ==================================================================
##                              Options
## ==================================================================

CFLAGS+=-I.. -I${ROOT}/compilers/fcompile @RPCLIB_INCLUDE@

ifeq "${TARGET_OS}" "cygwin"
	LINKLIBS	=-L${LIBROOT} -laubit4gl
endif

ALL=${LIBROOT}/libSQL_nosql${SO_EXT}

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}

nosql${SO_EXT}: libSQL_nosql${SO_EXT}

${LIBROOT}/libSQL_nosql${SO_EXT}: nosql.o
	${LD} ${SO_LDFLAGS} $^ -o $@  ${LINKLIBS}
ifeq "${SO_EXT}" ".dll"
	${MV} TMP${SOEXP_EXT} $@.a
endif


#nosql.dll: nosql.o
#	${MAKE} libSQL_nosql.dll DLLOBJS="$^" DLL_LDLIBS="${AUBIT_LIB}" DLL_LDFLAGS="-L${LIBROOT}"
#	${CP} libSQL_nosql.dll libSQL_nosql${DLL_EXPORTLIB_EXT} ${LIBROOT}


## ==================================================================
##                              Clean
## ==================================================================


clean:
	${RM} *.o *${SO_EXT} *.bak *.base *.dll *.def *.exp *.a

