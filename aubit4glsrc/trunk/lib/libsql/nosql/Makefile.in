#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
#override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

CFLAGS+=-I.. -I../../libincl -I../../../compilers/fcompile @RPCLIB_INCLUDE@

ifeq "${COMSPEC}" ""
    ALL=libSQL_nosql${SO_EXT}
else
    ALL=nosql.dll
endif

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}

nosql${SO_EXT}: libSQL_nosql${SO_EXT}

libSQL_nosql${SO_EXT}: nosql.o
	${LD} ${SO_LDFLAGS} $^ -o $@
	${CP} $@ ../..

nosql.dll: nosql.o
	${MAKE} libSQL_nosql.dll DLLOBJS="$^" DLL_LDLIBS="${AUBIT_LIB}" DLL_LDFLAGS="-L../.."
	${CP} libSQL_nosql.dll libSQL_nosql${DLL_EXPORTLIB_EXT} ../..


## ==================================================================
##                              Clean
## ==================================================================


clean:
	rm -f *.o *${SO_EXT} *.bak *.base *.dll *.def *.exp *.a

