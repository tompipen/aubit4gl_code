#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

override CFLAGS+=-I../.. -I../../../compilers/fcompile

## ==================================================================
##                              Tatgers
## ==================================================================


libSQL_nosql.so: nosql.o
#	ld  -fPIC -shared nosql.o -o libSQL_nosql.so
	ld  ${SO_LDFLAGS} nosql.o -o libSQL_nosql.so
	cp libSQL_nosql.so ../..

## ==================================================================
##                              Clean
## ==================================================================


clean:
	rm -f *.o *.so *.bak