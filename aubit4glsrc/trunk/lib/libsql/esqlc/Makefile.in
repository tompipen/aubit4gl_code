ROOT		=../../..
LIBROOT		=../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                              Options
## ==================================================================

SRC					=esql.ec
SRC_C				=${SRC:.ec=.c}
OBJS				=${SRC_C:.c=.o}

#CFLAGS are used only by C compiler on UNIX, not by ESQL/C or MSVC compilers:
CFLAGS				+=-I.. -I${LIBROOT} -I${ROOT}/compilers/fcompile \
					-I${INFORMIXDIR} -I${INFORMIXDIR}/incl/esql \
					-I$(AUBITDIR)/incl -I$(AUBITDIR)/lib/libincl

ESQL_INCLPATH		=-I.. -I${LIBROOT} -I${ROOT}/compilers/fcompile \
					-I${LIBROOT}/libincl -I$(AUBITDIR)/incl ${C_IFLAGS}

LD_LFLAGS           =-L$(INFORMIXDIR)/lib -L $(INFORMIXDIR)/lib/esql \
                    -L$(INFORMIXDIR)/lib/cli

IFX_LIBS            =@IFX_LIBS@


ifneq "$(findstring esql,${PLUGIN_STATIC})" ""
	
	#Remove any -shared flags and add the -static one:
	SO_LDFLAGS      :=-static $(filter-out -shared,${SO_LDFLAGS})

	#Must include libaubit4gl when linking statically, since statically linked
    #libs cannot have unresolved symbols at link-time. This one still has to be
    #linked in shared mode, since we don't make libaubit4gl.a (Thank God...)
	LD_POSTFLAGS    =-L${LIBROOT} -shared -laubit4gl

	#Don't know why, but -static flag was not enough, I still got everything
	#linked shared - so we had to explicitly name objects to link statically:
    #(Probably because we use gcc not ldd directly to do linking, and gcc
    #found the -shared flag at the end where we need it for libaubit4gl)

    #Separate Informix from non-informix libraries:
	ONLY_IFX_LIBS   :=$(filter -lif%,${IFX_LIBS})
    NON_IFX_LIBS    :=$(filter-out -lif%,${IFX_LIBS})

    #Change -l notation into full object file name:
	ONLY_IFX_LIBS	:=$(subst -lif,libif,${ONLY_IFX_LIBS})
	ONLY_IFX_LIBS	:=$(addsuffix .a,${ONLY_IFX_LIBS})

    #Seaparate libs in lib/ from libs in lib/esql/
	IFXLIBS_LIB     :=$(filter libifasf.a,${ONLY_IFX_LIBS})
	IFXLIBS_LIB_ESQL:=$(filter-out libifasf.a,${ONLY_IFX_LIBS})

	#Add full path:
	IFXLIBS_LIB		:=$(addprefix $(INFORMIXDIR)/lib/,${IFXLIBS_LIB})
	IFXLIBS_LIB_ESQL:=$(addprefix $(INFORMIXDIR)/lib/esql/,${IFXLIBS_LIB_ESQL})

	#Final result:
	IFX_LIBS		:=${IFXLIBS_LIB} ${IFXLIBS_LIB_ESQL} ${NON_IFX_LIBS} -lifasf
endif


ifdef COMSPEC
    #since we are using ESQL/C compiler, and then MSVC, this define is not automatic:
	ESQL_FLAGS		=-D__CYGWIN__
    #strange things happen to paths when invoking native Windows programs from CygWin make,
    #so we need to use explicit backslash, even though slash is understood by most
    #Windows programs:
	ESQL_INCLPATH	+=-I${LIBROOT} -I${ROOT}\compilers\fcompile -I${LIBROOT}\libincl
	#we must NOT use CygWin headers, on Windows we must compile with MSVC,
    #since it's the only supported compiler by esql/c on Windows
	#-Ic:/cygwin/usr/include
	ALL				=dllSQL_esql

	CFLAGS			+=-Ic:/INFORMIX

else
#    ESQL_INCLPATH	=-I${LIBROOT} -I${ROOT}/compilers/fcompile -I${LIBROOT}/libincl
	ALL				=${LIBROOT}/libSQL_esql${SO_EXT}
endif

CPP_FLAGS=-I${ROOT}/incl -I.. -P
#-P - line numbers - cpc don't like them
#-C

#ansi c          ::  -E cansi
#c++             ::  -E cplus
#check nocheck   ::  -H nocheck              (default: -H check)
#      syntax    ::  -H syntax
#comment         ::  -o
#compatible      ::  -C
#datetime eur    ::  -D eur                  (default: -D internal)
#         iso    ::  -D iso
#         jis    ::  -D jis
#         usa    ::  -D usa
#dblocale        ::  -x <dblocale>
#extern          ::  -e
#isolation-level ::  -I <isolation level>    (default: -I 10)
#list            ::  -l
#margins         ::  -m <mbegin>,<mend>      (default: -m 1,132)
#maxpacketsize   ::  -b <maxpacketsize>      (default: -b 16000)
#nowarn          ::  -w
#precom          ::  -c
#profile         ::  -R
#program         ::  -P <progname>           (default: -P <filename>)
#serverdb        ::  -d <serverdb>
#servernode      ::  -n <servernode>
#silent          ::  -s
#sqlmode internal::  -S internal               (default: -S internal)
#        ansi    ::  -S ansi
#        ansiora ::  -S ansiora
#        db2     ::  -S db2
#        oracle  ::  -S oracle
#timeout         ::  -t <timeout>
#trace file      ::  -F <tracefn>
#      long      ::  -X
#      short     ::  -T
#unicode		::  -G unicode
#user            ::  -u <usern>,<passw>
#userkey         ::  -U <userkey>
#version         ::  -V

CPC_FLAGS=-H nocheck -c
#-u dba,dba -d TST

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}

#ESQL/C database plug-in compiled with Informix ESQL/C compiler:
libSQL_esql${SO_EXT}: ${LIBROOT}/libSQL_esql${SO_EXT}
${LIBROOT}/libSQL_esql${SO_EXT}: ${SRC}
	cpp ${CPP_FLAGS} $^ -D__IFX__  > ifx_$^
	INFORMIXC=@INFORMIXC@; @IFMX_ESQLC@ -c ifx_$^ ${ESQL_FLAGS} -I${INFORMIXDIR} ${ESQL_INCLPATH} ${C_DFLAGS}
	${LD} ${LD_LFLAGS} $(SO_LDFLAGS) ifx_esql.o ${IFX_LIBS} -o $@ ${LD_POSTFLAGS}

#Querix ESQL/C compiler:
libSQL_esqlQ${SO_EXT}: ${LIBROOT}/libSQL_esqlQ${SO_EXT}
${LIBROOT}/libSQL_esqlQ${SO_EXT}:
	esqlc -D__QUERIX__ -I"E:/Program files/W2000/QueriX/include" ${SRC} -o $@

#SAP DB ESQL/C compiler:
libSQL_esqlSAP${SO_EXT}: ${LIBROOT}/libSQL_esqlSAP${SO_EXT}
${LIBROOT}/libSQL_esqlSAP${SO_EXT}: ${SRC}
#cpc will allways add .cpc extension to any source files
#	cp $^ $^.cpc
	cpp ${CPP_FLAGS} $^ -D__SAP__  -I/opt/sapdb/interfaces/precompiler/incl > sap_$^.cpc
#	${SAPDB_ESQLC} ${CPC_FLAGS} sap_$^ -I${ROOT}/incl -o sap_$^.o 2>&1 | grep -v "warning:"
	${SAPDB_ESQLC} ${CPC_FLAGS} sap_$^ -I${ROOT}/incl 2>&1 | grep -v "warning:"
	${CC} -c -I/opt/sapdb/interfaces/precompiler/incl -I../../../incl -o sap_esql.o sap_esql.ec.c
#	rm sap_$^.cpc
#	/opt/sapdb/interfaces/precompiler/bin/cpclnk sap_esql.o -o $@
	${CC} -shared sap_esql.o -o $@


#PostgreSQL ESQL/C compiler:
libSQL_esqlPG${SO_EXT}: ${LIBROOT}/libSQL_esqlPG${SO_EXT}
${LIBROOT}/libSQL_esqlPG${SO_EXT}: ${SRC}
	cpp ${CPP_FLAGS} $^ -D__PG__ -I/opt/ecpg-cvs/include > pg_$^
	${PG_ESQLC} -I/opt/ecpg-cvs/include -C INFORMIX -t pg_$^
#	${CC} ${STATIC} -g --shared $^ -o $@ ${PGLIBS} ${LIBAUBIT4GL}

