## ==================================================================
##                              Sub-Targets
## ==================================================================

show:
	@echo "ONLY_IFX_LIBS=${ONLY_IFX_LIBS}"
	@echo "IFXLIBS_LIB=${IFXLIBS_LIB}"
	@echo "IFXLIBS_LIB_ESQL=${IFXLIBS_LIB_ESQL}"
	@echo "NON_IFX_LIBS=${NON_IFX_LIBS}"

## ==================================================================
##                              Windows Targets
## ==================================================================

#just testing:
dllSQL_esql: ${SRC} ${DEF}
#  -e, -p          Preprocess only (no compilation or linking).
#-dcmdl          Displays command lines of all programs invoked.
#-c              Preprocess and compile only (no linking).
	@IFMX_ESQLC@ -dcmdl -o libSQL_esql.dll -target:dll $^ ${ESQL_FLAGS} \
		-I${INFORMIXDIR} ${ESQL_INCLPATH} -Ic:/INFORMIX ${LIBROOT}/libaubit4gl.dll.a
	${CP} libSQL_esql.dll ${LIBROOT}

${LIBROOT}/libaubit4gl.def:
	${MAKE} -C ${LIBROOT} dllaubit4gl

## ==================================================================
##                              Clean
## ==================================================================

clean:
	${RM} *.o *${SO_EXT} *.bak *.c *.obj *.c_ *.a *.dll *.lnk *.map *.exp \
	*.lib .\#* ifx_* pg_* sap_* q_* ${LIBROOT}/libSQL_esql${SO_EXT} \
    ${LIBROOT}/libSQL_esqlPG${SO_EXT} ${LIBROOT}/libSQL_esqlSAP${SO_EXT} \
	*.pcl *.lst

