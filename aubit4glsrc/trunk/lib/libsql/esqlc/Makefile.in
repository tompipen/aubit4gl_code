#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

override CFLAGS+=-I../.. -I../../../compilers/fcompile -I${INFORMIXDIR} -I${INFORMIXDIR}/incl/esql

ifdef COMSPEC
#    ESQL_FLAGS		=-D__CYGWIN__
#    ESQL_INCLPATH	=-I..\.. -I..\..\..\compilers\fcompile
else
    ESQL_INCLPATH	=-I../.. -I../../../compilers/fcompile
endif

## ==================================================================
##                              Targets
## ==================================================================

libSQL_esql.so: esql.o
#libSQL_esql.so: esql.c
	ld  $(SO_LDFLAGS) esql.o -o libSQL_esql.so
	cp libSQL_esql.so ../..

esql.o: esql.c

esql.c:
#	${ESQL_EC} -e $<
	esql -c esql.ec ${ESQL_FLAGS} -I${INFORMIXDIR} ${ESQL_INCLPATH}

## ==================================================================
##                              Clean
## ==================================================================

clean:
	rm -f *.o *.so *.bak *.c