ROOT    =../../..
LIBROOT =../..

#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common

## ==================================================================
##                              Options
## ==================================================================

CPPSRC	=ConnectionException.cpp PreparedStatement.cpp \
		postgresql.cpp PgConnection.cpp PgDriver.cpp

SRC		=simple.c

OBJS	=${SRC:.c=.o}
CPPOBJS	=${CPPSRC:.cpp=.o}
CFLAGS	+=-I.. @PGSQL_INCLUDE@ -I/usr/include/pgsql/libpq++ -I/usr/include/pgsql
CXXFLAGS=$(CFLAGS)

ALL		=${LIBROOT}/libSQL_pg${SO_EXT}

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}

#This "simple" PG plug-in with limited functionality was written by Mike
libSQL_pg${SO_EXT}: ${LIBROOT}/libSQL_pg${SO_EXT}
${LIBROOT}/libSQL_pg${SO_EXT}: $(OBJS)
	${LD} ${SO_LDFLAGS} $^ @PGSQL_LIBS@ -o $@ -L/usr/local/pgsql/lib

#This "real" fully functional driver written in C++ was never 
#finished by Sergio... :-(
libSQL_pgDEVEL${SO_EXT}:${LIBROOT}/libSQL_pgDEVEL${SO_EXT}
${LIBROOT}/libSQL_pgDEVEL${SO_EXT}: $(CPPOBJS)
	${LD} ${SO_LDFLAGS} $^ @PGSQL_LIBS@ -o $@


## ==================================================================
##                              Clean
## ==================================================================


clean:
	${RM} *.o *${SO_EXT} *.bak *.base *.dll *.def *.exp *.a

