ROOT    =../../..
LIBROOT =../..

#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
#override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

SRC=postgresql.cpp ConnectionException.cpp PgConnection.cpp \
PgDriver.cpp PreparedStatement.cpp
OBJS=${SRC:.cpp=.o}
CFLAGS+=-I..
CXXFLAGS=$(CFLAGS)

ifdef ${COMSPEC}
    ALL=dllSQL_pg.dll
else
    ALL=libSQL_pg${SO_EXT}
endif

## ==================================================================
##                              Targets
## ==================================================================

ALL: ${ALL}

libSQL_pg${SO_EXT}: $(OBJS)
	${LD} ${SO_LDFLAGS} $^ -Lpq -o $@
	${CP} $@ ${LIBROOT}

## ==================================================================
##                          Windows targets
## ==================================================================


## ==================================================================
##                              Clean
## ==================================================================


clean:
	${RM} *.o *${SO_EXT} *.bak *.base *.dll *.def *.exp *.a

