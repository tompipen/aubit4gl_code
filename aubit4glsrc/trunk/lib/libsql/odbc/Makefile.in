#All stuff common to more then one Aubit compiler make file is there:
#TMP_CFGLAGS:=${CFLAGS}
#unexport CFLAGS
#NO_EXPORT_VAR is needed because of bug in make. See Makefile-common
#NO_EXPORT_VAR=1
include ../../../incl/Makefile-common
override NOINCL=0

#needed because of bug in make. See Makefile-common (NO_EXPORT_VAR)
#TMP_CFGLAGS:=${CFLAGS}
#unexport CFLAGS
#CFLAGS=${TMP_CFGLAGS}
#CFLAGS+=-DXXXXX

ifdef IODBC_ODBC_LIB_DIR
	IODBC_LFLAGS=-L$(IODBC_ODBC_LIB_DIR)
endif
ifdef UNIXODBC_ODBC_LIB_DIR
	UNIXODBC_LFLAGS=-L$(UNIXODBC_ODBC_LIB_DIR)
endif

#override CFLAGS	+=-I../.. -I../../../compilers/fcompile -I..
LOCAL_CFLAGS=-I../.. -I../../../compilers/fcompile -I..
CFLAGS	+=${LOCAL_CFLAGS}
# -I/usr/include/pgsql/iodbc

ifdef ODBCLIBDIR
	#override CFLAGS	+= -I$(ODBCLIBDIR)
	CFLAGS	+= -I$(ODBCLIBDIR)
endif

OBJECTS=sql.o sqlex.o

ifeq "${HAVE_UNIXODBC}" "yes"
    ALL=unixodbc
endif

ifeq "${HAVE_IODBC}" "yes"
    ALL+=iodbc
endif

## ==================================================================
##                              Targets
## ==================================================================

#all : ${ALL}
all :
#	@echo "Default ODBC targets compiled successfully"
	@echo "Must specify 'unixodbc' or 'iodbc' (because clean is not working...)"
#we MUST always clena first, because we don't know for which libs where
#current object compiled, if they exists.
iodbc: 		clean show libSQL_iodbc.so
	@echo "iODBC target compiled successfully"

unixodbc: 	clean show libSQL_unixodbc.so
	@echo "unixODBC target compiled successfully"

ifxodbc: 	clean show libSQL_ifxodbc.so
	@echo "Informix ODBC target compiled successfully"

pgodbc: 	clean show libSQL_pgodbc.so
	@echo "PostgreSQL ODBC target compiled successfully"



#	    IODBC_INCLUDE=-I$withval/include
#	    IODBC_LFLAGS=-L$withval/lib
#	    IODBC_LIBS=-liodbc


libSQL_iodbc.so: CFLAGS+=-DIODBC @IODBC_INCLUDE@ @IODBC_LFLAGS@ ${LOCAL_CFLAGS}
libSQL_iodbc.so: ${OBJECTS}
#	ld  -fPIC -shared $^ -o $@ -liodbc ${IODBC_LFLAGS} @IODBC_INCLUDE@ @IODBC_LFLAGS@ @IODBC_LIBS@
#	@echo LOCAL_CFLAGS = ${LOCAL_CFLAGS}
#	@echo CFLAGS = ${CFLAGS}
	ld  -fPIC -shared $^ -o $@ @IODBC_LIBS@ @IODBC_LFLAGS@
	cp $@ ../..

#libSQL_unixodbc.so: CFLAGS+=-DUNIXODBC ${TMP_CFGLAGS} ${LOCAL_CFLAGS}
libSQL_unixodbc.so: CFLAGS+=-DUNIXODBC @UNIXODBC_INCLUDE@ @UNIXODBC_LFLAGS@ ${LOCAL_CFLAGS}
libSQL_unixodbc.so: ${OBJECTS}
#	@echo LOCAL_CFLAGS = ${LOCAL_CFLAGS}
#	@echo CFLAGS = ${CFLAGS}
#	ld  -fPIC -shared $^ -o $@ -lodbc ${UNIXODBC_LFLAGS}
	ld  -fPIC -shared $^ -o $@ @UNIXODBC_LIBS@ @UNIXODBC_LFLAGS@
	cp $@ ../..


#libSQL_ifxodbc.so: CFLAGS+=-DIFXODBC -I${INFORMIXDIR} -I${INFORMIXDIR}/incl/cli -L${INFORMIXDIR}/lib/cli -L${INFORMIXDIR}/lib/esql -Xlinker -rpath -Xlinker ${INFORMIXDIR}/lib/esql ${LOCAL_CFLAGS}
libSQL_ifxodbc.so: CFLAGS+=-DIFXODBC -I${INFORMIXDIR} -I${INFORMIXDIR}/incl/cli -L${INFORMIXDIR}/lib/cli -L${INFORMIXDIR}/lib/esql ${LOCAL_CFLAGS}
libSQL_ifxodbc.so: ${OBJECTS}
#	@echo LOCAL_CFLAGS = ${LOCAL_CFLAGS}
#	@echo CFLAGS = ${CFLAGS}
#	ld  -fPIC -shared $^ -o $@ -lodbc ${UNIXODBC_LFLAGS}
	ld  -fPIC -shared $^ -o $@ -lifcli -rpath ${INFORMIXDIR}/lib/esql -L${INFORMIXDIR}/lib/cli -L${INFORMIXDIR}/lib/esql
	cp $@ ../..

libSQL_pgodbc.so: CFLAGS+=-DPGODBC ${LOCAL_CFLAGS}
libSQL_pgodbc.so: ${OBJECTS}
	@echo LOCAL_CFLAGS = ${LOCAL_CFLAGS}
	@echo CFLAGS = ${CFLAGS}
#	ld  -fPIC -shared $^ -o $@ -lodbc ${UNIXODBC_LFLAGS}
	ld  -fPIC -shared $^ -o $@ -lpsqlodbc
	cp $@ ../..


.PHONY : show
show:
	@echo LOCAL_CFLAGS = ${LOCAL_CFLAGS}
	@echo CFLAGS = ${CFLAGS}
	@echo TMP_CFGLAGS = ${TMP_CFGLAGS}

## ==================================================================
##                              Clean
## ==================================================================

.PHONY : clean
clean:
	rm -f *.o *.bak *.so

