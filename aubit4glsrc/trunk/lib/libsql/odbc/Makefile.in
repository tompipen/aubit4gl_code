#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

ifdef IODBC_ODBC_LIB_DIR
	IODBC_LFLAGS=-L$(IODBC_ODBC_LIB_DIR)
endif
ifdef UNIXODBC_ODBC_LIB_DIR
	UNIXODBC_LFLAGS=-L$(UNIXODBC_ODBC_LIB_DIR)
endif

#override CFLAGS	+=-I../.. -I../../../compilers/fcompile -I..
LOCAL_CFLAGS=-I../.. -I../../../compilers/fcompile -I..
CFLAGS	+=${LOCAL_CFLAGS} @RPCLIB_INCLUDE@


ifdef ODBCLIBDIR
	#override CFLAGS	+= -I$(ODBCLIBDIR)
	CFLAGS	+= -I$(ODBCLIBDIR)
endif

OBJECTS=sql.o sqlex.o

ifeq "${HAVE_UNIXODBC}" "yes"
    ALL=unixodbc
endif

ifeq "${HAVE_IODBC}" "yes"
    ALL+=iodbc
endif

## ==================================================================
##                              Targets
## ==================================================================

#all : ${ALL}
all :
#	@echo "Default ODBC targets compiled successfully"
	@echo "Must specify 'unixodbc' or 'iodbc' (because clean is not working...)"


#we MUST always clean first, because we don't know for which libs where
#current object compiled, if they exists.
iodbc: 		clean show libSQL_iodbc.so
	@echo "iODBC target compiled successfully"

unixodbc: 	clean show libSQL_unixodbc.so
	@echo "unixODBC target compiled successfully"

ifxodbc: 	clean show libSQL_ifxodbc.so
	@echo "Informix ODBC target compiled successfully"

pgodbc: 	clean show libSQL_pgodbc.so
	@echo "PostgreSQL ODBC target compiled successfully"

odbc32: 	clean show ${OBJECTS}
	${MAKE} libSQL_odbc32.dll DLLOBJS="${OBJECTS}" DLL_LDLIBS="-laclshared -lodbc32" DLL_LDFLAGS="-L../.."
	cp libSQL_odbc32.dll ../..
	cp libSQL_odbc32.dll.a ../..
	@echo "Windows ODBC target compiled successfully"

libSQL_iodbc.so: CFLAGS+=-DIODBC @IODBC_INCLUDE@ @IODBC_LFLAGS@ ${LOCAL_CFLAGS}
libSQL_iodbc.so: ${OBJECTS}
	ld ${SO_LDFLAGS} $^ -o $@ @IODBC_LIBS@ @IODBC_LFLAGS@
	cp $@ ../..

libSQL_unixodbc.so: CFLAGS+=-DUNIXODBC @UNIXODBC_INCLUDE@ @UNIXODBC_LFLAGS@ ${LOCAL_CFLAGS}
libSQL_unixodbc.so: ${OBJECTS}
	ld ${SO_LDFLAGS} $^ -o $@ @UNIXODBC_LIBS@ @UNIXODBC_LFLAGS@
	cp $@ ../..

libSQL_ifxodbc.so: CFLAGS+=-DIFXODBC -I${INFORMIXDIR} -I${INFORMIXDIR}/incl/cli -L${INFORMIXDIR}/lib/cli -L${INFORMIXDIR}/lib/esql ${LOCAL_CFLAGS}
libSQL_ifxodbc.so: ${OBJECTS}
	ld ${SO_LDFLAGS} $^ -o $@ -lifcli -rpath ${INFORMIXDIR}/lib/esql -L${INFORMIXDIR}/lib/cli -L${INFORMIXDIR}/lib/esql
	cp $@ ../..

libSQL_pgodbc.so: CFLAGS+=-DPGODBC @PGODBC_INCLUDE@ @PGODBC_LFLAGS@ ${LOCAL_CFLAGS}
libSQL_pgodbc.so: ${OBJECTS}
	ld ${SO_LDFLAGS} $^ -o $@ -lpsqlodbc @PGODBC_LFLAGS@
	cp $@ ../..


## ==================================================================
##                              Clean
## ==================================================================

.PHONY : clean
clean:
	rm -f *.o *.bak *.so *.base *.dll *.def *.exp *.a


.PHONY : show
show:
	@echo LOCAL_CFLAGS = ${LOCAL_CFLAGS}
	@echo CFLAGS = ${CFLAGS}
	@echo TMP_CFGLAGS = ${TMP_CFGLAGS}


