#############
#this internal variable points to default location of Aubit config files
#Default=/etc/opt/aubit4gl
AUBITETC=/etc/opt/aubit4gl


ifndef NOINCL
    NOINCL=0
endif

ifeq "$(NOINCL)" "0"
	ifdef AUBITBUILDMK
		include $(AUBITBUILDMK)
	else
		include ${AUBITETC}/aubitbuild.mk
	endif

	ifdef AUBITBUILDMKMULTI
		include $(AUBITBUILDMKMULTI)
	endif
endif

override NOINCL=0

ifdef IODBC_ODBC_LIB_DIR
	IODBC_LFLAGS=-L$(IODBC_ODBC_LIB_DIR)
endif
ifdef UNIXODBC_ODBC_LIB_DIR
	UNIXODBC_LFLAGS=-L$(UNIXODBC_ODBC_LIB_DIR)
endif

override CFLAGS	+=-I../.. -I../../../compilers/fcompile -I.. -I/usr/include/pgsql/iodbc
override CFLAGS	+= -I$(ODBCLIBDIR)

## ==================================================================
##                              Targets
## ==================================================================

all : iodbc unixodbc
iodbc: libSQL_iodbc.so
unixodbc: libSQL_unixodbc.so

libSQL_iodbc.so: CFLAGS+=-DIODBC
libSQL_iodbc.so: sql.o sqlex.o
	ld  -fPIC -shared sql.o sqlex.o -o libSQL_iodbc.so -liodbc ${IODBC_LFLAGS}
	cp libSQL_iodbc.so ../..

libSQL_unixodbc.so: CFLAGS+=-DUNIXODBC
libSQL_unixodbc.so: sql.o sqlex.o
	ld  -fPIC -shared sql.o sqlex.o -o libSQL_unixodbc.so -lodbc ${UNIXODBC_LFLAGS}
	cp libSQL_unixodbc.so ../..


## ==================================================================
##                              Clean
## ==================================================================

clean:
	rm -f *.o *.bak *.so

## ----------------------------- EOF -------------------------------
