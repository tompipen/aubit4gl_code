#All stuff common to more then one Aubit compiler make file is there:

#NO_EXPORT_VAR is needed because of bug in make. See Makefile-common
NO_EXPORT_VAR=1
include ../../../incl/Makefile-common
override NOINCL=0

#needed because of bug in make. See Makefile-common (NO_EXPORT_VAR)
TMP_CFGLAGS:=${CFLAGS}
unexport CFLAGS
CFLAGS=${TMP_CFGLAGS}
CFLAGS+=-DXXXXX

#LOCAL_CFLAGS=-I../../.. -L../../.. -I../.. -L../.. -I../../../.. -L../../../.. -I../../libincl

LOCAL_CFLAGS=-I../.. -I../../../compilers/fcompile

ifdef IODBC_ODBC_LIB_DIR
	IODBC_LFLAGS=-L$(IODBC_ODBC_LIB_DIR)
endif
ifdef UNIXODBC_ODBC_LIB_DIR
	UNIXODBC_LFLAGS=-L$(UNIXODBC_ODBC_LIB_DIR)
endif

#override CFLAGS	+=-I../.. -I../../../compilers/fcompile -I..
CFLAGS	+=-I../.. -I../../../compilers/fcompile -I..
# -I/usr/include/pgsql/iodbc

ifdef ODBCLIBDIR
	override CFLAGS	+= -I$(ODBCLIBDIR)
endif

OBJECTS=sql.o sqlex.o

ifeq "${HAVE_UNIXODBC}" "yes"
    ALL=unixodbc
endif

ifeq "${HAVE_IODBC}" "yes"
    ALL+=iodbc
endif

## ==================================================================
##                              Targets
## ==================================================================

all : ${ALL}
#we MUST always clena first, because we don't know for which libs where
#current object compiled, if they exists.
iodbc: 		clean libSQL_iodbc.so
unixodbc: 	clean libSQL_unixodbc.so



libSQL_iodbc.so: CFLAGS+=-DIODBC
libSQL_iodbc.so: ${OBJECTS}
	ld  -fPIC -shared $^ -o $@ -liodbc ${IODBC_LFLAGS}
	cp $@ ../..


libSQL_unixodbc.so: CFLAGS+=-DUNIXODBC ${TMP_CFGLAGS} -DWWWWWW ${LOCAL_CFLAGS}
libSQL_unixodbc.so: ${OBJECTS}
	ld  -fPIC -shared $^ -o $@ -lodbc ${UNIXODBC_LFLAGS}
	cp $@ ../..


## ==================================================================
##                              Clean
## ==================================================================

clean:
	rm -f *.o *.bak *.so

