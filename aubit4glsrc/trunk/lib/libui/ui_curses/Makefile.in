LIBROOT=../..
ROOT=../../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

CFLAGS		+=-I.. -I. -I${ROOT}/incl -I${ROOT}/compilers/menus -I${ROOT}/compilers/fcompile @RPCLIB_INCLUDE@

ifdef COMSPEC
	ifneq "@HAVE_CURSES@" "0"
		ALL			+=dlllibUI_TUI
    endif
else
	ifneq "@HAVE_CURSES@" "0"
		ALL			+=${LIBROOT}/libUI_TUI${SO_EXT}
    endif
endif

ifeq "${NON_PEDANTIC_OK}" "1"
	CFLAGS_NO_PEDANTIC  =$(CFLAGS:%-pedantic=%)
else
	CFLAGS_NO_PEDANTIC  =${CFLAGS}
endif

## ==================================================================
##                              Source files
## ==================================================================

ALLOBJ=curslib.o newpanels.o ioform.o colours.o array.o iarray.o prompt.o

## ==================================================================
##                              Targets
## ==================================================================

all : ${ALL}
	@echo "Default targets (${ALL}) successfully compiled."

${LIBROOT}/libUI_TUI${SO_EXT}: ${ALLOBJ}
#	${LD} ${SO_LDFLAGS} -o $@ $^ -lform -lpanel @CURSES_LIB_NAME@
	${LD} ${SO_LDFLAGS} -o $@ $^ @CURSES_LIB_NAME@

## ==================================================================
##                              Windows Targets
## ==================================================================

.PHONY : dlllibUI_TUI
dlllibUI_TUI: ${ALLOBJ}
	${MAKE} libUI_TUI.dll DLLOBJS="$^" DLL_LDLIBS="${RPCLIB_NAME} ${AUBIT_LIB} -lFORM_XDR @CURSES_LIB_NAME@" DLL_LDFLAGS="-L${LIBROOT} @CURSES_LIB_PATH@"
# -lPDF_NOPDF
	${CP} libUI_TUI.dll ${LIBROOT}
	${CP} libUI_TUI${DLL_EXPORTLIB_EXT} ${LIBROOT}

## ==================================================================
##                              Dependencies
## ==================================================================



## ==================================================================
##                            Sub Targets
## ==================================================================

${ROOT}/compilers/fcompile/form_x.h:
	${MAKE} -C ${ROOT}/compilers/fcompile rpc

#invalid lvalue in assignment
curslib.o: curslib.c
	${CC} ${CFLAGS_NO_PEDANTIC} -c -o $@ $*.c


## ==================================================================
##                            Clean Targets
## ==================================================================

clean:
	${RM} *.o *${SO_EXT} *.bak  *.ao *.err *.glb *.dll *.a *.def *.glb *.ao \
	debug.out *.err core  gmon.out

