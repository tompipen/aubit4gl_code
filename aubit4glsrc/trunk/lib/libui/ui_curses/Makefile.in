LIBROOT=../..
ROOT=../../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                              Options
## ==================================================================

#CFLAGS		+=-I.. -I. -I${ROOT}/incl
#must be BEFORE system paths:
CFLAGS		:=@CURSES_INC_PATH@ ${CFLAGS} -I.. -I. -I${ROOT}/incl
#@RPCLIB_INCLUDE@
#-I${ROOT}/compilers/menus -I${ROOT}/compilers/fcompile

ifneq "@HAVE_CURSES@" "0"
	ALL			=${LIBROOT}/libUI_TUI${SO_EXT}
endif

ifneq "@HAVE_PDCURSES@" "0"
	ALL			=${LIBROOT}/libUI_TUI${SO_EXT}
endif

ifeq "${NON_PEDANTIC_OK}" "1"
	CFLAGS_NO_PEDANTIC  =$(CFLAGS:%-pedantic=%)
else
	CFLAGS_NO_PEDANTIC  =${CFLAGS}
endif

ifeq "${TARGET_OS}" "cygwin"
	LINKLIBS	=-L${LIBROOT} -laubit4gl
endif


## ==================================================================
##                              Source files
## ==================================================================

ALLOBJ=curslib.o dump_scr.o newpanels.o ioform.o colours.o array.o iarray.o prompt.o

## ==================================================================
##                              Targets
## ==================================================================

all : ${ALL}
	@echo "Default targets (${ALL}) successfully compiled."

${LIBROOT}/libUI_TUI${SO_EXT}: ${ALLOBJ}
	${LD} ${SO_LDFLAGS} -o $@ $^ @CURSES_LIB_NAME@ @CURSES_LIB_PATH@ ${LINKLIBS}

## ==================================================================
##                            Sub Targets
## ==================================================================

#${ROOT}/compilers/fcompile/form_x.h:
#	${MAKE} -C ${ROOT}/compilers/fcompile rpc

#invalid lvalue in assignment
curslib.o: curslib.c
	${CC} ${CFLAGS_NO_PEDANTIC} -c -o $@ $*.c


## ==================================================================
##                            Clean Targets
## ==================================================================

clean:
	${RM} *.o *${SO_EXT} *.bak *.ao *.err *.a *.def *.glb \
	debug.out core  gmon.out

