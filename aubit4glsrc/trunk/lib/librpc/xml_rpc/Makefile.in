#All stuff common to more then one Aubit compiler make file is there:
include ../../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                              Source files
## ==================================================================

CMODS_RPC		=xmlrpc_client.c xmlrpc_server.c
				
OBJS_RPC			=${CMODS_RPC:.c=.o}
OBJS_NORPC			=${CMODS_NORPC:.c=.o}

CLIENT_CFLAGS       :=$(shell xmlrpc-c-config libwww-client --cflags)
CLIENT_LIBS         :=$(shell xmlrpc-c-config libwww-client --ldadd)

## ==================================================================
##                              Options
## ==================================================================

ifdef COMSPEC
	ifneq "@HAVE_RPCLIB@" "0"
		ALL			+=dlllibRPC_XMLRPC
    endif
else
	ifneq "@HAVE_RPCLIB@" "0"
		ALL			+=libRPC_XMLRPC${SO_EXT}
    endif
endif

#This must NOT be += because it would place affitional parameters AFTER
#existing parameters already in CFLAGS: we must not do this, because if
#specific path is needed to RPClib, it MUST be BEFORE other potenitially
#conflicting paths:
CFLAGS				:=@RPCLIB_INCLUDE@ @RPCLIB_LFLAGS@ -I../../../compilers/fcompile -I../../libincl ${CFLAGS}  ${CLIENT_CFLAGS} 

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) built successfully."

libRPC_XMLRPC.so: ${OBJS_RPC}
	${LD} ${SO_LDFLAGS} -o $@ $^ ${CLIENT_LIBS}
	${CP} $@ ../..

## ==================================================================
##                       Windows 32 DLL Targets
## ==================================================================

dlllibRPC_XMLRPC: ${CMODS_RPC}
	${MAKE} libRPC_XMLRPC.dll DLLOBJS="$^" DLL_LDLIBS="${AUBIT_PDFLIBNAME} ${AUBIT_LIB}" DLL_LDFLAGS="@RPCLIB_LFLAGS@ @RPCLIB_INCLUDE@ ${RPCLIB_NAME} ${PDF_LIBNAME} -L../.. -I../../libincl -I../../../compilers/fcompile"
	${CP} libRPC_XMLRPC.dll libRPC_XMLRPC.dll.a ../..

dlllibRPC_NORPC: ${CMODS_NORPC}
	${MAKE} libRPC_NORPC.dll DLLOBJS="$^" DLL_LDLIBS="${AUBIT_PDFLIBNAME} " DLL_LDFLAGS="@RPCLIB_INCLUDE@ ${PDF_LIBNAME} -L../.. -I../../libincl -I../../../compilers/fcompile"
	${CP} libRPC_NORPC.dll libRPC_NORPC.dll.a ../..

## ==================================================================
##                        Sub Targets
## ==================================================================

#form_x.h:
#	${MAKE} -C ../../../compilers/fcompile rpc

## ==================================================================
##                        Dependencies
## ==================================================================

#${OBJS_RPC} ${OBJS_NORPC}: form_x.h
#${CMODS_RPC} ${CMODS_NORPC}: form_x.h

## ==================================================================
##                        Clean Targets
## ==================================================================

clean :
#	${RM} $(OBJS) $(OBJS_DEBUG)
	${RM} *.out *.glb *.so *.a  *.o  *.bak *.exe *.dll *.stackdump *.err core
	${RM} *.base *.exp libRPC_XMLRPC.def

## ==================================================================
##                         Other Targets
## ==================================================================

lclint: $(CMODS)
	-lclint -weak $(CFLAGS) $(CMODS) > lclint.log 2>&1
	@echo "see lclint.log for results"

