ROOT        =../..
LIBROOT     =${ROOT}/lib


#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                    		Settings
## ==================================================================

LOCAL_IFLAGS=-I..
CFLAGS      +=${LOCAL_IFLAGS} -D_NO_FORM_X_H_

#we don't want -Wall in CFLAGS when compiling rpcgen generated code because it would
#give us bunch of warnings about unused varibles, that we cannot fix:
CFLAGS_RPCGEN	=$(CFLAGS:%-Wall=%)
SHARED			=-shared

RPC		=${LIBROOT}/libXDRPACKER_struct_form${SO_EXT} \
		${LIBROOT}/libXDRPACKER_menu_list${SO_EXT} \
		${LIBROOT}/libXDRPACKER_report${SO_EXT}
XGEN	=${LIBROOT}/libDATA_struct_form${SO_EXT} \
		${LIBROOT}/libDATA_menu_list${SO_EXT} \
		${LIBROOT}/libDATA_report${SO_EXT}
ANY		=pack_any${SO_EXT}

ALL 	=${XGEN} ${ANY}

#we don't need rpclib to do any of this, do we?
#ifdef COMSPEC
#	ifneq "@HAVE_RPCLIB@" "0"
#		ALL			+=xxxtodoxxx
#    endif
#else
#	ifneq "@HAVE_RPCLIB@" "0"
#		ALL			+=${RPC}
#    endif
#endif

#...but we do need rpcgen:
ifeq "${USE_RPCGEN}" "0"
	#FIXME: update this:
	RPCGEN      =${CP} ${ROOT}/tools/cygwin/form_x_xdr.c ${ROOT}/tools/cygwin/form_x.h .
	#ALL			+=${RPC}
else
	RPCGEN 		=@RPCGEN@
	ALL			+=${RPC}
endif

XGENEXE    		=${ROOT}/compilers/xgen/xgen

## ==================================================================
##                          Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) built successfully."

#ld  -o ../../lib/libDATA_struct_form${SO_EXT} form_x.xi.o form_x.xio.o form_x.xo.o -r

${LIBROOT}/libDATA_struct_form${SO_EXT}: form_x.xi.o form_x.xio.o form_x.xo.o
#	${LD} $(CFLAGS) ${SHARED} -o $@ $^
	${LD} ${SO_LDFLAGS} -o $@ $^


${LIBROOT}/libDATA_menu_list${SO_EXT}: menu_x.xi.o menu_x.xio.o menu_x.xo.o
#	${LD} $(CFLAGS) ${SHARED} -o $@ $^
	${LD} ${SO_LDFLAGS} -o $@ $^
#	${CP} $@ ${LIBROOT}

${LIBROOT}/libDATA_report${SO_EXT}: report.xi.o report.xio.o report.xo.o
#	${LD} $(CFLAGS) ${SHARED} -o $@ $^  -D_NO_FORM_X_H_
	${LD} ${SO_LDFLAGS} -o $@ $^
#	${CP} $@ ${LIBROOT}

${LIBROOT}/libXDRPACKER_struct_form${SO_EXT}:	form_x_xdr.o
#	${LD} $(CFLAGS_RPCGEN) ${SHARED} -o $@ $^
	${LD} ${SO_LDFLAGS} -o $@ $^
#	${CP} $@ ${LIBROOT}

${LIBROOT}/libXDRPACKER_menu_list${SO_EXT}: 	menu_x_xdr.o
#	${LD} $(CFLAGS_RPCGEN) ${SHARED} -o $@ $^
	${LD} ${SO_LDFLAGS} -o $@ $^
#	${CP} $@ ${LIBROOT}

${LIBROOT}/libXDRPACKER_report${SO_EXT}:  		report_xdr.o
#	${LD} $(CFLAGS_RPCGEN) ${SHARED} -o $@ $^
	${LD} ${SO_LDFLAGS} -o $@ $^
#	${CP} $@ ${LIBROOT}

#FIXME: needs renaming, or is it obsolete?
pack_any${SO_EXT}: menu_x.xio.o form_x.xio.o report.xio.o
#	${LD} $(CFLAGS) ${SHARED} -o $@ $^ -D_NO_FORM_X_H_
	${LD} ${SO_LDFLAGS} -o $@ $^
#no copy to lib here?

## ==================================================================
##                          Sub-targets
## ==================================================================

form_x_xdr.c: form_x.x
	${RPCGEN} $^

menu_x_xdr.c: menu_x.x
	${RPCGEN} $^

report_xdr.c: report.x
	${RPCGEN} $^

#"xgen form_x.x" will create:
#form_x.x.h   form_x.xio.c  form_x.xs.h form_x.xi.c  form_x.xo.c

form_x.xo.c form_x.xi.c form_x.xio.c form_x.x.h: form_x.x
	${XGENEXE} $^ struct_form

menu_x.xo.c menu_x.xi.c menu_x.xio.c: menu_x.x
	${XGENEXE} $^ menu_list

report.xo.c report.xi.c report.xio.c: report.x
	${XGENEXE} $^ report

${XGENEXE}:
	${MAKE} -C ${ROOT}/compilers/xgen

report.xi.o: form_x.x.h


## ==================================================================
##                          Clean
## ==================================================================

clean:
	${RM} *.c *${SO_EXT} *.h *.bak .*.bak *.o

## ==================================================================
##                         Other Targets
## ==================================================================

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ${ROOT}/${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

