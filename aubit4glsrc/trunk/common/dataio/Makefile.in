ROOT        =../..
LIBROOT     =${ROOT}/lib


#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                    		Settings
## ==================================================================

#we don't want -Wall in CFLAGS when compiling rpcgen generated code because it would
#give us bunch of warnings about unused varibles, that we cannot fix:
CFLAGS_RPCGEN	=$(CFLAGS:%-Wall=%)
SHARED			=-shared

RPC		=libXDRPACKER_struct_form${SO_EXT} libXDRPACKER_menu_list${SO_EXT} libXDRPACKER_report${SO_EXT}
XGEN	=libDATA_struct_form${SO_EXT} libDATA_menu_list${SO_EXT} libDATA_report${SO_EXT}
ANY		=pack_any${SO_EXT}

ALL 	=${XGEN} ${ANY}

#we don't need rpclib to do any of this, do we?
#ifdef COMSPEC
#	ifneq "@HAVE_RPCLIB@" "0"
#		ALL			+=xxxtodoxxx
#    endif
#else
#	ifneq "@HAVE_RPCLIB@" "0"
#		ALL			+=${RPC}
#    endif
#endif

#...but we do need rpcgen:
ifeq "${USE_RPCGEN}" "0"
	#FIXME: update this:
	RPCGEN      =${CP} ${ROOT}/tools/cygwin/form_x_xdr.c ${ROOT}/tools/cygwin/form_x.h .
	#ALL			+=${RPC}
else
	RPCGEN 		=@RPCGEN@
	ALL			+=${RPC}
endif

XGENEXE    		=${ROOT}/compilers/xgen/xgen

## ==================================================================
##                          Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) built successfully."

libDATA_struct_form${SO_EXT}: 		form_x.xo.c
	${CC} $(CFLAGS) ${SHARED} -o $@ $^ form_x.xi.c form_x.xio.c
	${CP} $@ ${LIBROOT}

libDATA_menu_list${SO_EXT}: 		menu_x.xo.c
	${CC} $(CFLAGS) ${SHARED} -o $@ $^ menu_x.xi.c menu_x.xio.c
	${CP} $@ ${LIBROOT}

libDATA_report${SO_EXT}: 			report.xo.c
	${CC} $(CFLAGS) ${SHARED} -o $@ $^ report.xi.c report.xio.c
	${CP} $@ ${LIBROOT}

libXDRPACKER_struct_form${SO_EXT}:	form_x_xdr.c
	${CC} $(CFLAGS_RPCGEN) ${SHARED} -o $@ $^
	${CP} $@ ${LIBROOT}

libXDRPACKER_menu_list${SO_EXT}: 	menu_x_xdr.c
	${CC} $(CFLAGS_RPCGEN) ${SHARED} -o $@ $^
	${CP} $@ ${LIBROOT}

libXDRPACKER_report${SO_EXT}:  		report_xdr.c
	${CC} $(CFLAGS_RPCGEN) ${SHARED} -o $@ $^
	${CP} $@ ${LIBROOT}

#FIXME: needs renaming, or is it obsolete?
pack_any${SO_EXT}:
	${CC} $(CFLAGS) ${SHARED} -o $@ menu_x.xio.c form_x.xio.c report.xio.c
#no copy to lib here?

## ==================================================================
##                          Sub-targets
## ==================================================================

form_x_xdr.c menu_x_xdr.c report_xdr.c:
	${RPCGEN} form_x.x
	${RPCGEN} menu_x.x
	${RPCGEN} report.x

form_x.xo.c menu_x.xo.c report.xo.c:
#"xgen form_x.x" will create:
#form_x.x.h   form_x.xio.c  form_x.xs.h form_x.xi.c  form_x.xo.c
	${XGENEXE} form_x.x struct_form
	${XGENEXE} menu_x.x menu_list
	${XGENEXE} report.x report

${XGENEXE}:
	${MAKE} -C ${ROOT}/compilers/xgen

## ==================================================================
##                          Clean
## ==================================================================

clean:
	${RM} *.c *${SO_EXT} *.h *.bak

## ==================================================================
##                         Other Targets
## ==================================================================

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ${ROOT}/${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

