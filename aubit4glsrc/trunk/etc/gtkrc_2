# gtkrc_2
#
# This is the definition file used by Aubit4gl
# when in HL_GTK mode.
#
# The system relies on a series of styles
# most are generic
# but the way gtk works, you could assign a different style for 
# the same attribute depending on the widget type
#
# Styles
# By default Aubit will apply styles based on the attributes
# COLOR, REVERSE, UNDERLINE, BOLD, BLINK, DIM and INVISIBLE
#
# These combine up to give a style number
#
# Colours:
# BLACK, RED, GREEN, YELLOW, BLUE, MAGENTA, CYAN, WHILE, "NORMAL"
# 0      1    2      3       4     5        6     7      8
#
# REVERSE   +=0x10
# UNDERLINE +=0x20
# BOLD      +=0x40
# BLINK     +=0x80
# DIM       +=0x100
# INVISIBLE +=0x200
#
# Not all attributes combinations will be coded for in here from the
# start.
#
# If you're missing one - add it...
#
# Special Styles
#
#   AppWindow  default applicatin window style
#
#   Error      default error style
#


style "0" {  # Black
	# This is the default style.
	# This is used as the basis for all the others
	# and applied if no attributes are applied.

  	#fg[NORMAL]       = "#000000"
  	#fg[ACTIVE]       = "#314a82"
  	#fg[PRELIGHT]     = "#415a92"
  	#fg[SELECTED]     = "#ffffff"
  	#fg[INSENSITIVE]  = "#969696"
  	

  	#bg[NORMAL]       = "#a0a0ff"
  	#bg[ACTIVE]       = "#a0a0ff"

  	#bg[NORMAL]       = "#8080ff"

  	bg[NORMAL]       = "#d9d9d9"


  	#bg[PRELIGHT]     = "#ffffff"
  	#bg[SELECTED]     = "#ffffff"
  	#bg[INSENSITIVE]  = "#ffffff"
  	#
  	#base[NORMAL]     = "#ffffff"
  	#base[SELECTED]   = "#a5abba"
  	#base[ACTIVE]     = "#ffffff"
  	#base[PRELIGHT]   = "#eaeaea"
  	#base[INSENSITIVE]= "#a0a0a0"
  	#
  	#text[INSENSITIVE]= "#000000"
  	#text[SELECTED]   = "#000000"
  	#text[ACTIVE]     = "#000000"

  	font_name = "monospace 8"

}

style "1" { #RED 
        fg[NORMAL]       = "#ff0000"
  	font_name = "monospace 8"
  	bg[NORMAL]       = "#d9d9d9"
}

