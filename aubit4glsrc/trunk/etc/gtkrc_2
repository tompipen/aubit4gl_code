style "AppWindow" {
	#base[NORMAL]="#ffffff"
        #bg[NORMAL]       = "#000000"
        bg[NORMAL]       = "#d9d9d9"
        bg[ACTIVE]       = "#ffffff"
	#bg_pixmap[NORMAL]= "wall2.png"



  	font_name = "monospace 8"
}


style "FormLabel" {
  	font_name = "monospace 8"
        bg[NORMAL]       = "#000000"
        bg[ACTIVE]       = "#ffffff"
        fg[NORMAL]       = "#000000"
        fg[ACTIVE]       = "#ffffff"

}

style "MenuButtons" {
