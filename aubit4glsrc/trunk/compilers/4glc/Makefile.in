#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                   Source files
## ==================================================================

ifeq "@YACC@" "no"
	CFLAGS		+=-I../../tools/no_yacc/cygwin/compilers/4glc
	Y_TAB_C		=../../tools/no_yacc/cygwin/compilers/4glc/rules/generated/y.tab.c
else
	Y_TAB_C		=rules/generated/y.tab.c
endif

CMODS           = \
				4glc.c \
				dim.c \
				list.c lexer.c \
				mod.c map.c \
				rules/generated/states.c \
				rules/generated/kw.c \
                ${Y_TAB_C}

4GLCAOBJ		=${CMODS:.c=.o}


## ==================================================================
##                    Options
## ==================================================================

ALL				=rules.t 4glc

C_LOCAL_IFLAGS  =-I../../lib -I../../lib/libincl -I../../lib/liblex/lex_c -I. -I../fcompile -Irules
CFLAGS			+=${C_LOCAL_IFLAGS} @RPCLIB_INCLUDE@ @CURSES_INC_PATH@
LCLINT_CFLAGS   =${C_IFLAGS} ${C_LOCAL_IFLAGS}

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) successfully compiled."

#4glc: ${4GLCAOBJ} ${LIB_C}
4glc: ${4GLCAOBJ}
#	${CC} ${CFLAGS} -L../../lib -o $@ ${4GLCAOBJ} ${AUBIT_LIB} ${LIB_C_L}
	${CC} ${EXE_CFLAGS} -L../../lib -o $@ $^ ${AUBIT_LIB}
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}

#4glp: ${4GLCAOBJ} ${LIB_PERL}
#	${CC} ${CFLAGS} -L../../lib -o $@ ${4GLCAOBJ} ${AUBIT_LIB} ${LIB_PERL_L}
#	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}


## ==================================================================
##                            Windows Targets
## ==================================================================

exportlib4glcomp: ${4GLCAOBJ} ${4GLCOBJ_C}
#	${MAKE} libexportlib4glcomp.dll DLLOBJS="$^" DLL_LDLIBS="${AUBIT_LIB}" DLL_LDFLAGS="-L../../lib"
#	dlltool --export-all --output-def $@ $^
#	dlltool --export-all --output-exp libexportlib4glcomp.dll.a $^
	${CC} -shared -Wl,--output-def=exportlib4glcomp.def -Wl,--out-implib=exportlib4glcomp.dll.a $^ -Wl,--export-all-symbols ${AUBIT_LIB} -L../../lib
#	${CC} -shared  -Wl,--output-def=libA4GLLEX_C.def -Wl,--out-implib=libA4GLLEX_C.dll.a $^ -Wl,--export-all-symbols

## ==================================================================
##                            Sub Targets
## ==================================================================

rules.t :
	${MAKE} -C rules $(MKNAME)

rules/generated/y.tab.o: ${Y_TAB_C}
	$(CC) ${CFLAGS} -c -o $@ ${Y_TAB_C} @YYDEBUG@ -I../../lib/liblex/lex_c -I.

${Y_TAB_C}:
#	make -C rules generated/y.tab.c $(MKNAME)
	${MAKE} -C rules

../fcompile/form_x.h:
	${MAKE} -C ../fcompile rpc

## ==================================================================
##                            Dependencies
## ==================================================================

rules/generated/kw.c: 				rules.t
rules/generated/single_words.rule: 	rules.t
rules/generated/y.tab.c: 			rules.t
rules/generated/states.c: 			rules.t
mod.o: 								mod.c ${Y_TAB_C}
rules/generated/y.tab.o: 			../fcompile/form_x.h
lexer.o: 							rules/generated/kw.h
lexer.o: 							rules/generated/y.tab.h




splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ../../${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

## ==================================================================
##                            Clean Targets
## ==================================================================

clean: clean.rules.generated
	${RM} *.so *.o *.err 4glc 4glc-noodbc *.a *.exe *.bak .\#* 4glp *.log *.dll *.dll.a

clean.rules.generated:
	(cd rules/generated; ${RM} *.yacc *.c *.h single_words *.o *.yh *.rule *.output)


