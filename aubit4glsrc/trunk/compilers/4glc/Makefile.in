#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                    Options
## ==================================================================

#FIXME: use 4glpc ONLY for 4gl code
#4GLPC			=${SH} ../../bin/4glpc
#4GLPCFLAGS		=-make-compile -Irules -L/lib -L../../lib -g -verbose -L. -I.

#ifndef COMSPEC
#	4GLPCFLAGS	+=${LINK_COMPILERS} #-ldl
##-rdynamic
##else
##	4GLPCFLAGS	+=${SO_GCCFLAGS}
#endif

ALL				=rules.t 4glc

ifneq "@PERLBUILD@" "no"
    #FIXME: remove 4glp executable, make libA4GLLEX_xx loaded by dlopen()
    #from 4glc executable depenfing on A4GL_OUTPUTLANG in aubitrc:
	ALL         +=4glp
endif

CFLAGS			+=-I../../lib -I../../lib/libincl -I../fcompile -Irules @RPCLIB_INCLUDE@ @CURSES_INC_PATH@

## ==================================================================
##                   Source files
## ==================================================================

ifeq "@YACC@" "no"
	CFLAGS		+=-I../../tools/no_yacc/cygwin/compilers/4glc
	Y_TAB_C		=../../tools/no_yacc/cygwin/compilers/4glc/rules/generated/y.tab.c
else
	Y_TAB_C		=rules/generated/y.tab.c
endif

4GLCAOBJ		= \
				4glc.o \
				dim.o \
				list.o lexer.o \
				mod.o map.o \
				rules/generated/states.o \
				rules/generated/kw.o \
				rules/generated/y.tab.o

#FIXME: does compile_c_gtk.o belong here, or in 4GLCAOBJ ?
4GLPERL_OBJ     =compile_perl.o compile_c_gtk.o
4GLCOBJ_C		=compile_c.o compile_c_gtk.o

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) successfully compield."

4glc: ${4GLCAOBJ} libA4GLLEX_C${SO_EXT}
	${CC} ${CFLAGS} -L../../lib -o $@ ${4GLCAOBJ} ${AUBIT_LIB} -lA4GLLEX_C
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}

4glp: ${4GLCAOBJ} libA4GLLEX_PERL${SO_EXT}
	${CC} ${CFLAGS} -L../../lib -o $@ ${4GLCAOBJ} ${AUBIT_LIB} -lA4GLLEX_PERL
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}

libA4GLLEX_C.so: ${4GLCOBJ_C}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../../lib

libA4GLLEX_PERL.so: ${4GLPERL_OBJ}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../../lib


## ==================================================================
##                            Windows Targets
## ==================================================================

libA4GLLEX_C.dll: ${4GLCOBJ_C}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../../lib

libA4GLLEX_PERL.dll: ${4GLPERL_OBJ}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../../lib


## ==================================================================
##                            Sub Targets
## ==================================================================

rules.t :
	make -C rules $(MKNAME)

rules/generated/y.tab.o: ${Y_TAB_C}
	$(CC) ${CFLAGS} -c -o $@ ${Y_TAB_C} @YYDEBUG@

${Y_TAB_C}:
#	make -C rules generated/y.tab.c $(MKNAME)
	make -C rules

../fcompile/form_x.h:
	make -C ../fcompile rpc

## ==================================================================
##                            Dependencies
## ==================================================================

rules/generated/kw.c: rules.t
rules/generated/single_words.rule: rules.t
rules/generated/y.tab.c: rules.t
rules/generated/states.c: rules.t
mod.o: mod.c ${Y_TAB_C}
rules/generated/y.tab.o: ../fcompile/form_x.h

## ==================================================================
##                            Clean Targets
## ==================================================================

clean: clean.rules.generated
	${RM} *.so *.o *.err 4glc 4glc-noodbc *.a *.exe *.bak .\#* 4glp *.log

clean.rules.generated:
	(cd rules/generated; ${RM} *.yacc *.c *.h single_words *.o *.yh *.rule *.output)


