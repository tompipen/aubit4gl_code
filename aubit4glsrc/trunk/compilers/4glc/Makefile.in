#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                    Options
## ==================================================================

4GLPC			=${SH} ../../bin/4glpc
4GLPCFLAGS		=-make-compile -Irules -L/lib -L../../lib -g -verbose -L. -I.
#-nogtk -DDEBUG

ifndef COMSPEC
	4GLPCFLAGS	+=${LINK_COMPILERS}
#-rdynamic
#else
#	4GLPCFLAGS	+=${SO_GCCFLAGS}
endif

ALL				=rules.t 4glc

#ifeq "$(ODBC_LINK)" "static" #static linking for SQL access libs
#	ifneq "$(ODBC)" "no"
#		ALL		+=4glc-noodbc
#	endif
#endif

CFLAGS			+=-I../../lib -I../../lib/libincl -I../fcompile -Irules @RPCLIB_INCLUDE@ @CURSES_INC_PATH@
#override CFLAGS	+=-I../fcompile #-I../mcompile

#debbuging in function yyparse() and then export YYDEBUG=1 to environment
YYDEBUG			=@YYDEBUG@

ifndef COMSPEC
	4GLPCFLAGS	+=-ldl
endif


#ifeq "$(PDFBUILD)" "yes"
#	4GLPCFLAGS	+=-lpdf
#else
#	4GLPCFLAGS	+=-nopdf
#endif

ifeq "@YACC@" "no"
	CFLAGS		+=-I../../tools/no_yacc/cygwin/compilers/4glc
	Y_TAB_C		=../../tools/no_yacc/cygwin/compilers/4glc/rules/generated/y.tab.c
else
	Y_TAB_C		=rules/generated/y.tab.c
endif


4GLCAOBJ		=mod.o 4glc.o map.o rules/generated/states.o \
				rules/generated/kw.o rules/generated/y.tab.o dim.o list.o

4GLCAOBJ_PERL   := ${4GLCAOBJ} compile_perl.o compile_c_gtk.o
4GLCOBJ_PERL	= ${4GLCAOBJ_PERL} lexer.o

ifeq "$(OUTPUTLANG)" "c"
	4GLCAOBJ	+= compile_c.o compile_c_gtk.o
endif

ifeq "$(OUTPUTLANG)" "perl"
	4GLCAOBJ	+= compile_perl.o compile_c_gtk.o
endif

4GLCOBJ			=${4GLCAOBJ} lexer.o

## ==================================================================
##                              Targets
## ==================================================================


all: ${ALL}

4glc: ${4GLCOBJ} ../../lib/libaclall.a
#	@echo OUTPUTLANG = $(OUTPUTLANG)
	${4GLPC} ${4GLPCFLAGS} -o $@ ${4GLCOBJ}
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}

4glc_perl: ${4GLCOBJ_PERL} ../../lib/libaclall.a
#	${4GLPC} ${4GLPCFLAGS} 	${4GLCOBJ_PERL} ../../tools/test/libpdf-dummy.c -o 4glc_perl
	${4GLPC} ${4GLPCFLAGS} 	${4GLCOBJ_PERL} -o $@
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}


4glc-noodbc:  ${4GLCOBJ} ../../lib/libaclall-noodbc.a
	${4GLPC} -noodbc ${4GLPCFLAGS} 	${4GLCOBJ} -o $@
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}


.PHONY : exp_4glc
exp_4glc : ${4GLCOBJ}
	${MAKE} lib4glc${DLL_EXPORTLIB_EXT} DLLOBJS="${4GLCOBJ}"

########################################
include ../../incl/a4gl-rules.mki
########################################

## ==================================================================
##                            Sub Targets
## ==================================================================

rules/generated/kw.c: rules.t
rules/generated/single_words.rule: rules.t
rules/generated/y.tab.c: rules.t
rules/generated/states.c: rules.t

rules.t :
	make -C rules $(MKNAME)

rules/generated/y.tab.o: ${Y_TAB_C}
	$(CC) ${YYDEBUG} ${CFLAGS} -c -o rules/generated/y.tab.o ${Y_TAB_C}

mod.o: mod.c ${Y_TAB_C}

4glc.o: 4glc.c
	${CC} 4glc.c $(CFLAGS) -c -o 4glc.o

${Y_TAB_C}:
#	make -C rules generated/y.tab.c $(MKNAME)
	make -C rules $(MKNAME)

## ==================================================================
##                            Clean Targets
## ==================================================================

clean: clean.rules.generated
	rm -f *.o *.err 4glc 4glc-noodbc *.a *.exe *.bak .\#* 4glc_perl *.log

clean.rules.generated:
	(cd rules/generated; rm -f *.yacc *.c *.h single_words *.o *.yh *.rule *.output)


