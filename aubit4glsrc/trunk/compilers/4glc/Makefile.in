#${RPCLIB_NAME} -lFORM_XDR @CURSES_LIB_NAME@
# -lPDF_NOPDF
	${CP} libA4GLLEX_C.dll ../../lib
	${CP} libA4GLLEX_C.dll.a ../../lib

#libA4GLLEX_PERL.dll: ${4GLPERL_OBJ}
#	${LD} ${SO_LDFLAGS} -o $@ $^
#	${CP} $@ ../../lib


exportlib4glcomp: ${4GLCAOBJ} ${4GLCOBJ_C}
