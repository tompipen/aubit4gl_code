#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common
override NOINCL=0

## ==================================================================
##                   Source files
## ==================================================================

ifeq "@YACC@" "no"
	CFLAGS		+=-I../../tools/no_yacc/cygwin/compilers/4glc
	Y_TAB_C		=../../tools/no_yacc/cygwin/compilers/4glc/rules/generated/y.tab.c
else
	Y_TAB_C		=rules/generated/y.tab.c
endif

4GLCAOBJ		= \
				4glc.o \
				dim.o \
				list.o lexer.o \
				mod.o map.o \
				rules/generated/states.o \
				rules/generated/kw.o \
				rules/generated/y.tab.o

#FIXME: does compile_c_gtk.o belong here, or in 4GLCAOBJ ?
4GLPERL_OBJ     =compile_perl.o compile_c_gtk.o
4GLCOBJ_C		=compile_c.o compile_c_gtk.o



## ==================================================================
##                    Options
## ==================================================================

#FIXME: use 4glpc ONLY for 4gl code
#4GLPC			=${SH} ../../bin/4glpc
#4GLPCFLAGS		=-make-compile -Irules -L/lib -L../../lib -g -verbose -L. -I.

#ifndef COMSPEC
#	4GLPCFLAGS	+=${LINK_COMPILERS} #-ldl
##-rdynamic
##else
##	4GLPCFLAGS	+=${SO_GCCFLAGS}
#endif

ALL				=rules.t 4glc

ifneq "@PERLBUILD@" "no"
    #FIXME: remove 4glp executable, make libA4GLLEX_xx loaded by dlopen()
    #from 4glc executable depenfing on A4GL_OUTPUTLANG in aubitrc:
	ALL         +=4glp
endif


ifneq "${COMSPEC}" ""
	#FIXME: it should be like this: try this again after Mike enables dlopen on libA4GLLEX_
	#LIB_PERL	=dllA4GLLEX_PERL
	#LIB_C		=dllA4GLLEX_C
	#LIB_PERL_L  =-lA4GLLEX_PERL
	#LIB_C_L     =-lA4GLLEX_C
	#but it is instead like this:
	#I cannot compile this as .dll because of problems with automatic exporting of structs. see mod.c
	#so, we will create monolit 4glc - there is no Perl compiler on Windows at the moment anyway:
	LIB_C		=
    4GLCAOBJ	+=${4GLCOBJ_C}
else
	LIB_PERL	=../../lib/libA4GLLEX_PERL${SO_EXT}
	LIB_C		=../../lib/libA4GLLEX_C${SO_EXT}
	LIB_PERL_L  =-lA4GLLEX_PERL
	LIB_C_L     =-lA4GLLEX_C
endif

CFLAGS			+=-I../../lib -I../../lib/libincl -I../fcompile -Irules @RPCLIB_INCLUDE@ @CURSES_INC_PATH@

## ==================================================================
##                              Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) successfully compield."

4glc: ${4GLCAOBJ} ${LIB_C}
	${CC} ${CFLAGS} -L../../lib -o $@ ${4GLCAOBJ} ${AUBIT_LIB} ${LIB_C_L}
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}

4glp: ${4GLCAOBJ} ${LIB_PERL}
	${CC} ${CFLAGS} -L../../lib -o $@ ${4GLCAOBJ} ${AUBIT_LIB} ${LIB_PERL_L}
	${CPEXE} $@${EXEEXT} ../../bin/$@${EXEEXT}

../../lib/libA4GLLEX_C.so: libA4GLLEX_C.so
libA4GLLEX_C.so : ${4GLCOBJ_C}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../../lib

../../lib/libA4GLLEX_PERL.so: libA4GLLEX_PERL.so
libA4GLLEX_PERL.so: ${4GLPERL_OBJ}
	${LD} ${SO_LDFLAGS} -o $@ $^
	${CP} $@ ../../lib


## ==================================================================
##                            Windows Targets
## ==================================================================

