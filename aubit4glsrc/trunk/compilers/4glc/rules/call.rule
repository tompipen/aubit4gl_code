   } 
   opt_func_call_args 
   {
   sprintf($<str>$,"%d",get_counter_val());drop_counter();
   }
   CLOSE_BRACKET 
   {
	 debug("print_expr (6)");print_expr($<ptr>10);
   }
   opt_return_remote
   { 
