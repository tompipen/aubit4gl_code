		set_curr_block(a+1);
		 } atline commands_as_list {
			int a;
			a=scan_orderby(current_orderby, $<ptr>2)+1;
		set_cmdlineno($<integer_val>4);

		$<report_format_section_entry>$=new_report_format_section_entry(RB_BEFORE_GROUP_OF,$<ptr>2, $<commands>5,a,$<integer_val>4);
