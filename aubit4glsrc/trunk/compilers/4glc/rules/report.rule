skip_cmd : 
	SKIP INT_VALUE op_lines {
			double n;
			char buff[256];
			strcpy(buff,$<str>3);
			n=atof($<str>2);
			if (buff[0]=='1') {
				int ni;
				ni=atoi($<str>2);
				$<cmd>$=new_skip_cmd(ni);
				if (if_print_stack_cnt==0) if_print_section[0]=0;
				if (get_curr_report_stack_whytype_1()=='T') {
					if_print_stack[if_print_stack_cnt][if_print_section[if_print_stack_cnt]]+=(int)n;
				}
			} else {
				if (rep_type!=REP_TYPE_PDF) { 
					a4gl_yyerror("SKIP BY is only in PDF reports"); YYERROR; 
				} 
				$<cmd>$=new_skip_by_cmd(n);
			}
	}
	;


