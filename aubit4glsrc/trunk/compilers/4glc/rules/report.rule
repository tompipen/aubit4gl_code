		variable_action(-1,$<str>3,"","","add_function");
		set_curr_rep_name($<str>3);
		push_blockcommand("REPORT");
		}
	op_param_var_list CLOSE_BRACKET define_section op_output_section op_rep_order_by  {
		char errbuff[256];
			struct variable_list v;
