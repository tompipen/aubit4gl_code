                        set_variables(&v,'L');
			if (!check_parameters(errbuff,&v, $<ptr_list>7)) {
				a4gl_yyerror(errbuff);
				YYERROR;
			}
			 inc_var_assigned_from_binding_list(expand_parameters(&v,$<ptr_list>7));
			set_report_orderby(&v, $<ptr_list>7, $<report_orderby_section>11);
		}
	format_section END_REPORT 
		{
		pop_blockcommand("REPORT");
 			A4GL_chk_and_clr_labels();
			map_report_end();
                	$<module_entry>$=new_report_definition($<str>3, $<e_boolean>1,$<ptr_list>7, $<startrep>10, $<report_orderby_section>11, $<report_format_section>13 ,$<integer_val>4) ;
