*/


arr_expr :
OPEN_BRACKET arr_expr CLOSE_BRACKET  {sprintf($<str>$,"(%s)",$<str>2);}
| arr_expr arr_next_math arr_expr { sprintf($<str>$,"%s%s%s",$<str>1,$<str>2,$<str>3);}
| INT_VALUE {sprintf($<str>$,"%d",atoi($<str>1));}
| arr_int_sign INT_VALUE {sprintf($<str>$,"(%s%s)",$<str>1,$<str>2);}
| variable {
  int a;
  a=scan_variable($<str>1)&15;
  if (a!=1&&a!=2) {
    
    a4gl_yyerror("Only INTEGER/SMALLINT variables may be used as subscripts");
    YYERROR;
    /* error processing */;
  }
  if (A4GL_isyes(acl_getenv("DOING_CM"))) {
	char buff[20000];
	sprintf(buff,"%s",fgl_add_scope($<str>1,0));
	if (buff[0]=='M' || buff[0]=='G') {
		sprintf($<str>$,"(this.%s) As Int32",fgl_add_scope($<str>1,0));
	} else {
		sprintf($<str>$,"(%s) As Int32",fgl_add_scope($<str>1,0));
	}
  } else {
  	sprintf($<str>$,"%s",fgl_add_scope($<str>1,0));
  }
}
| function_call_expr {
	sprintf($<str>$,print_arr_expr_fcall($<ptr>1));
}
;

arr_next_math:
	PLUS {strcpy($<str>$,"+");}
|       MINUS {strcpy($<str>$,"-");}
|       MULTIPLY {strcpy($<str>$,"*");}
|       DIVIDE {strcpy($<str>$,"/");}
|       MOD {strcpy($<str>$,"%");}
;



arr_int_sign	: PLUS {strcpy($<str>$,"+");}
		| MINUS {strcpy($<str>$,"-");}
;


