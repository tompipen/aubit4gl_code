idx_name:
         CHAR_VALUE KW_DOT identifier {
	     sprintf($<str>$,"%s", A4GLSQLCV_ownerize_tablename($<str>1, $<str>3));
        }
        | CHAR_VALUE {
	        sprintf($<str>$,"%s", A4GLSQLCV_ownerize_tablename(NULL, $<str>1));
                ADDMAP("Use Index",$<str>$);
        }

        | identifier {strcpy($<str>$,$<str>1); ADDMAP("Use Index",$<str>1); }
        | identifier COLON identifier { sprintf($<str>$,"%s%s%s",$<str>1,$<str>2,$<str>3); ADDMAP("Use Index",$<str>$); }
