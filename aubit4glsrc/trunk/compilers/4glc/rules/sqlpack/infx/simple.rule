table_name: table_name_i  {
                if (strstr($<str>1,"systables")!=0) { add_feature("IFX_SYSTABLES"); }
                if (strstr($<str>1,"syscolumns")!=0) { add_feature("IFX_SYSCOLUMNS"); }
                if (strstr($<str>1,"sysindexes")!=0) { add_feature("IFX_SYSINDEXES"); }
                strcpy($<str>$,A4GLSQLCV_check_tablename($<str>1));
                }
;


table_name_i:
        CHAR_VALUE KW_DOT identifier {
	     sprintf($<str>$,"%s", A4GLSQLCV_ownerize_tablename($<str>1, $<str>3));
	     ADDMAP("Use Table",$<str>$);
        }
        | CHAR_VALUE {
	     sprintf($<str>$,"%s", A4GLSQLCV_ownerize_tablename(NULL, A4GL_strip_quotes($<str>1)));
             ADDMAP("Use Table",$<str>$);
        }
        | identifier {
	     sprintf($<str>$,"%s", A4GLSQLCV_ownerize_tablename(NULL, $<str>1));
	     ADDMAP("Use Table",$<str>$);
	}
        | identifier COLON identifier {
	     sprintf($<str>$,"%s:%s", $<str>1, A4GLSQLCV_ownerize_tablename(NULL, $<str>3));
	     ADDMAP("Use Table",$<str>$);
	}
        | identifier COLON CHAR_VALUE KW_DOT identifier {
	     sprintf($<str>$,"%s:%s", $<str>1, A4GLSQLCV_ownerize_tablename($<str>3,$<str>5));
	     ADDMAP("Use Table",$<str>$);
        }
        | identifier ATSIGN identifier {
	     sprintf($<str>$,"%s@%s", $<str>1, A4GLSQLCV_ownerize_tablename(NULL, $<str>3));
	     ADDMAP("Use Table",$<str>$);
	}
        | identifier ATSIGN identifier COLON identifier {
	     sprintf($<str>$,"%s@%s:%s", $<str>1, $<str>3, A4GLSQLCV_ownerize_tablename(NULL, $<str>5));
	     ADDMAP("Use Table",$<str>$);
	}
        | identifier ATSIGN identifier COLON CHAR_VALUE KW_DOT identifier{
	     sprintf($<str>$,"%s@%s:%s", $<str>1, $<str>3, A4GLSQLCV_ownerize_tablename($<str>5, $<str>7));
	     ADDMAP("Use Table",$<str>$);
        }
;



