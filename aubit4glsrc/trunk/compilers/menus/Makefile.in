#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

ALL				=mcompile mdecompile

ifeq "${USE_RPCGEN}" "0"
	RPCGEN      =cp ../../tools/cygwin/menu_x_xdr.c ../../tools/cygwin/menu_x.h .
else
	RPCGEN      =@RPCGEN@ menu_x.x
endif

C_LOCAL_IFLAGS  =-I. -I../../lib/libincl -I../fcompile
#FIXME: this compiler should not depend on RPC:
CFLAGS		   +=${C_LOCAL_IFLAGS} @RPCLIB_INCLUDE@
LCLINT_CFLAGS   =${C_IFLAGS} ${C_LOCAL_IFLAGS}

## ==================================================================
##                              Source files
## ==================================================================

SRC_COMMON      =mcompile.c
#menuwrite.c and menu_x_xdr.c are now part of libMENU_XDR
#MENU_X_XDR		=menu_x_xdr.c

SOURCES.yacc 	=menu.yacc
SOURCES.lex 	=menu.lex
TARGETS.c 		=y.tab.c
DECOMPILE		=decompile.c

CMODS           =${SRC_COMMON} $(TARGETS.c)
OBJECTS 		=$(CMODS:%.c=%.o)


ifeq "@YACC@" "no"
	LEX_YY_C	=../../tools/no_yacc/cygwin/compilers/menus/lex.yy.c
	Y_TAB_C_DEP	=../../tools/no_yacc/cygwin/compilers/menus/y.tab.c
else
	LEX_YY_C	=lex.yy.c
	Y_TAB_C_DEP=$(SOURCES.yacc) ${LEX_YY_C}
endif


## ==================================================================
##                             Targets
## ==================================================================


all: $(ALL)
	@echo "Default targets ($(ALL)) successfully compiled"

mcompile: $(OBJECTS)
	${CC} ${CFLAGS} -L../../lib -o $@ $^ ${AUBIT_LIB}
	${LN} $@${EXE} ../../bin/$@${EXE}

mdecompile: ${DECOMPILE}
	${CC} -o $@ ${CFLAGS} $^ -L../../lib ${AUBIT_LIB}
	${CP} $@ ../../bin

## ==================================================================
##                             Sub Targets
## ==================================================================

menu_x_xdr.c:  menu_x.x
#${MENU_X_XDR}: menu_x.x
	${RPCGEN}

menu_x.h: menu_x.x
	${RPCGEN}

y.tab.c: ${Y_TAB_C_DEP}
ifeq "@YACC@" "no"
	cp ${Y_TAB_C_DEP} .
else
	nice -20 ${YACC} -v  $(SOURCES.yacc)
endif

lex.yy.c: $(SOURCES.lex)
ifeq "@LEX@" "no"
	cp ${LEX_YY_C} .
else
	nice -20 flex -i $(SOURCES.lex)
endif

rpc:
	${RPCGEN}

#%.o: %.c
#	${CC} ${CFLAGS_GTK_C} -c -o $@ $^


## ==================================================================
##                             Dependencies
## ==================================================================

y.tab.o: lex.yy.c
#rpc: ${MENU_X_XDR}
#rpc: menu_x_xdr.c

#FIXME: mcompile should not depend on rpcgen:
mcompile.o: menu_x.h

## ==================================================================
##                          Clean targets
## ==================================================================

clean:
	$(RM) mcompile mcompile-noodbc $(OBJECTS) $(TARGETS.c) *.BAK *.delta core *~ *.ln \
	*.output lex.yy.c *.err *.out decompiler menu_x_xdr.c menu_x.h \
	*.bak *.exe mdecompile *.o *.dll *.a

## ==================================================================
##                           Other targets
## ==================================================================

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ../../${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"


