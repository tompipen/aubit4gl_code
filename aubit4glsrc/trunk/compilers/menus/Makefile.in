#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

4GLPCFLAGS		=-make-compile ${LINK_COMPILERS} -verbose -L../../lib
#-rdynamic

#FIXME: we should compile dummy executables in any case, so we can use them instead
#of real ones when installing binary distro on system with missing RPClib:
ifeq "@HAVE_RPCLIB@" "0"
	ALL			=norpclib
else
	ALL			=mcompile mdecompile
endif

ifeq "${USE_RPCGEN}" "0"
	RPCGEN      =cp ../../tools/cygwin/menu_x_xdr.c ../../tools/cygwin/menu_x.h .
else
	RPCGEN      =@RPCGEN@ menu_x.x
endif

CFLAGS		   +=-I. @RPCLIB_INCLUDE@

ifdef COMSPEC
	CYGWIN_FLAGS=${RPCLIB_NAME}
endif

ifeq "@YACC@" "no"
	Y_TAB_C_DEP=../../tools/no_yacc/cygwin/compilers/menus/y.tab.c
else
	Y_TAB_C_DEP=$(SOURCES.yacc) lex.yy.c
endif

LEX_YY_C        =../../tools/no_yacc/cygwin/compilers/menus/lex.yy.c

SRC_COMMON      =mcompile.c menuwrite.c

SCRIPT 			=
ifeq "@HAVE_RPCLIB@" "0"
	SOURCES.c 	=${SRC_COMMON}
else
	SOURCES.c 	=${SRC_COMMON} menu_x_xdr.c
endif

SOURCES.h 		=
SOURCES.yacc 	=menu.yacc
SOURCES.lex 	= menu.lex

SOURCES 		= $(SOURCES.h) $(SOURCES.lex) $(SOURCES.yacc) $(SOURCES.c)
TARGETS.c 		= y.tab.c
TARGETS 		= $(TARGETS.c)
OBJECTS 		= $(SOURCES.c:%.c=%.o) $(TARGETS.c:%.c=%.o)
LINTFILES 		= $(SOURCES.c:%.c=%.ln) $(TARGETS.c:%.c=%.ln)

#this can be libaclshared too, so we wont use it for now:
#MCOMPILE_DEPS       =../../lib/libaclall.a


## ==================================================================
##                             Targets
## ==================================================================


all:	 $(ALL)

norpclib:
#we will make some fake executables, to simplify installation and RPM builds:
	${CC} mnorpclib.c -o mcompile
	${CC} mnorpclib.c -o mdecompile
	${CP} mcompile mdecompile ../../bin
	@echo "Sun RPClib was not detected - no menu related functionality will be compiled"

mcompile: $(SOURCES.c) $(TARGETS.c) $(TARGETS.h) $(OBJECTS)
#	${SH} ../../bin/4glpc ${4GLPCFLAGS} -o $@ $(OBJECTS)
#same as: why are we using 4glpc ?
	${CC} ${CFLAGS} -L../../lib -o $@ ${OBJECTS} ${AUBIT_LIB} 
#	-lPDF_NOPDF -lRPC_SUNRPC ${RPCLIB_NAME}
	${LN} mcompile${EXE} ../../bin/mcompile${EXE}

mdecompile: decompile.c menu_x_xdr.c
	${CC} -o $@ ${CFLAGS} decompile.c menu_x_xdr.c -L../../lib ${AUBIT_LIB} ${CYGWIN_FLAGS}
#	-lRPC_SUNRPC -lPDF_NOPDF
	${CP} $@ ../../bin

## ==================================================================
##                             Sub Targets
## ==================================================================

menu_x_xdr.c: menu_x.x
	${RPCGEN}

menu_x.h: menu_x.x
	${RPCGEN}

y.tab.c: ${Y_TAB_C_DEP}
ifeq "@YACC@" "no"
	cp ${Y_TAB_C_DEP} .
else
	nice -20 ${YACC} -v  $(SOURCES.yacc)
endif

lex.yy.c: $(SOURCES.lex)
ifeq "@LEX@" "no"
	cp ${LEX_YY_C} .
else
	nice -20 flex -i $(SOURCES.lex)
endif

## ==================================================================
##                             Dependencies
## ==================================================================

y.tab.o: lex.yy.c
rpc: menu_x_xdr.c

## ==================================================================
##                          Clean targets
## ==================================================================

clean:
	$(RM) mcompile mcompile-noodbc $(OBJECTS) $(TARGETS.c) *.BAK *.delta core *~ *.ln \
	*.output lex.yy.c *.err *.out decompiler menu_x_xdr.c menu_x.h \
	*.bak *.exe mdecompile

## ==================================================================
##                           Other targets
## ==================================================================

lint:
	/usr/5bin/lint -n -lansic $(CPPFLAGS) $(SOURCES.c) $(TARGETS.c)

#---------------------------- EOF -----------------------------------
