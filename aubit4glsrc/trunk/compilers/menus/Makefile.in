#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

4GLPCFLAGS		=-make-compile ${LINK_COMPILERS} -verbose -L../../lib
#-rdynamic

#FIXME: we should compile dummy executables in any case, so we can use them instead
#of real ones when installing binary distro on system with missing RPClib:
ifeq "@HAVE_RPCLIB@" "0"
	ALL			=norpclib
else
	ALL			=mcompile mdecompile
endif

ifeq "${USE_RPCGEN}" "0"
	RPCGEN      =cp ../../tools/cygwin/menu_x_xdr.c ../../tools/cygwin/menu_x.h .
else
	RPCGEN      =@RPCGEN@ menu_x.x
endif

CFLAGS		   +=-I. @RPCLIB_INCLUDE@

## ==================================================================
##                              Source files
## ==================================================================

#FIXME: create -lMENU_XDR from:
#menu_x_xdr.c decompile.c menuwrite.c ??readmenu.c??


SRC_COMMON      =mcompile.c 
#menuwrite.c and menu_x_xdr.c are now part of libMENU_XDR
#MENU_X_XDR		=menu_x_xdr.c

SOURCES.yacc 	=menu.yacc
SOURCES.lex 	=menu.lex
TARGETS.c 		=y.tab.c
DECOMPILE		=decompile.c
OBJECTS 		=$(SOURCES.c:%.c=%.o) $(TARGETS.c:%.c=%.o)

ifeq "@HAVE_RPCLIB@" "0"
	SOURCES.c 	=${SRC_COMMON}
else
	SOURCES.c 	=${SRC_COMMON} ${MENU_X_XDR}
endif

ifeq "@YACC@" "no"
	LEX_YY_C	=../../tools/no_yacc/cygwin/compilers/menus/lex.yy.c
	Y_TAB_C_DEP	=../../tools/no_yacc/cygwin/compilers/menus/y.tab.c
else
	LEX_YY_C	=lex.yy.c
	Y_TAB_C_DEP=$(SOURCES.yacc) ${LEX_YY_C}
endif


## ==================================================================
##                             Targets
## ==================================================================


all: $(ALL)
	@echo "Default targets ($(ALL)) successfully compiled"

mcompile: $(SOURCES.c) $(TARGETS.c) $(TARGETS.h) $(OBJECTS)
	${CC} ${CFLAGS} -L../../lib -o $@ ${OBJECTS} ${AUBIT_LIB} ${RPCLIB_NAME} -lMENU_XDR
	${LN} $@${EXE} ../../bin/$@${EXE}

mdecompile: ${DECOMPILE} ${MENU_X_XDR}
	${CC} -o $@ ${CFLAGS} $^ -L../../lib ${AUBIT_LIB} ${RPCLIB_NAME} -lMENU_XDR
	${CP} $@ ../../bin

norpclib:
#we will make some fake executables, to simplify installation and RPM builds:
	${CC} mnorpclib.c -o mcompile
	${CC} mnorpclib.c -o mdecompile
	${CP} mcompile mdecompile ../../bin
	@echo "Sun RPClib was not detected - no menu related functionality will be compiled"

## ==================================================================
##                             Sub Targets
## ==================================================================

menu_x_xdr.c:  menu_x.x
#${MENU_X_XDR}: menu_x.x
	${RPCGEN}

menu_x.h: menu_x.x
	${RPCGEN}

y.tab.c: ${Y_TAB_C_DEP}
ifeq "@YACC@" "no"
	cp ${Y_TAB_C_DEP} .
else
	nice -20 ${YACC} -v  $(SOURCES.yacc)
endif

lex.yy.c: $(SOURCES.lex)
ifeq "@LEX@" "no"
	cp ${LEX_YY_C} .
else
	nice -20 flex -i $(SOURCES.lex)
endif

## ==================================================================
##                             Dependencies
## ==================================================================

y.tab.o: lex.yy.c
#rpc: ${MENU_X_XDR}
#rpc: menu_x_xdr.c
rpc:
	${RPCGEN}

## ==================================================================
##                          Clean targets
## ==================================================================

clean:
	$(RM) mcompile mcompile-noodbc $(OBJECTS) $(TARGETS.c) *.BAK *.delta core *~ *.ln \
	*.output lex.yy.c *.err *.out decompiler ${MENU_X_XDR} menu_x.h \
	*.bak *.exe mdecompile *.o *.dll *.a

## ==================================================================
##                           Other targets
## ==================================================================

lint:
	lint -n -lansic $(CPPFLAGS) $(SOURCES.c) $(TARGETS.c)

