#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

## ==================================================================
##                    Source code
## ==================================================================

OBJS_XDR    =report_xdr.o
OBJS		=${OBJS_XDR} y.tab.o main.o data.o output.o
OBJS_DECOMP =${OBJS_XDR} dump.o
OBJS_4GL    =${OBJS_XDR} dump_4gl.o
REPORT_H    =report.h

## ==================================================================
##                    Settings
## ==================================================================

4GLPC       =4glpc
#CFLAGS		+=-g -Wall

## ==================================================================
##                    Targets
## ==================================================================

all: aace decompile aace_4gl generate_aace

aace: ${OBJS}
	${4GLPC} $(CFLAGS) $^ -o $@

decompile: ${REPORT_H} ${OBJS_DECOMP}
	${CC} $(CFLAGS) ${OBJS_DECOMP} -o $@

aace_4gl : ${REPORT_H} ${OBJS_4GL}
	${CC} $(CFLAGS) ${OBJS_4GL} -o $@

generate_aace : generate.4gl
	${4GLPC} $^ -o $@
	./$@ mips_3_3 systables

## ==================================================================
##                    Sub-Targets
## ==================================================================

y.tab.c: ace.yacc
	${YACC} -v $^

lex.yy.c: ace.lex
	${LEX} -i $^

y.tab.o: y.tab.c lex.yy.c ${REPORT_H}
	${CC} $(CFLAGS) -c y.tab.c -o $@

data.o: ${REPORT_H} data.c
	${CC} $(CFLAGS) -c data.c -o $@

${REPORT_H}: report.x
	@RPCGEN@ $^


## ==================================================================
##                    Other targets
## ==================================================================

test: aace_4gl aace
	aace m1.ace
	touch t1.4gl t1.err
	${RM} t1.4gl t1.err
	aace_4gl m1.aarc > t1.4gl
	4glc t1.4gl
	${4GLPC} -g t1.c -o t1


test2: generate_aace aace_4gl
	./generate_aace mips_3_3 systables
	./aace systables.aace
	./aace_4gl systables.aarc > systables.4gl
	4glc systables.4gl
	${4GLPC} -g systables.c -o systables

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ../../${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

## ==================================================================
##                    Clean
## ==================================================================

#ace.lex   CVS     dump.c        main.c    report.x
#ace.yacc  data.c  generate.4gl  Makefile  output.c

clean:
	${RM} *.bak lex.yy.c y.tab.c report_xdr.c ${REPORT_H} y.output *.o \
	*.a *.so *.err


