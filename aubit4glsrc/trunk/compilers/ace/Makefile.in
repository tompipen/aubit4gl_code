ROOT        =../..

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                    Source code
## ==================================================================

OBJS_XDR    =report_xdr.o
OBJS		=${OBJS_XDR} y.tab.o main.o data.o output.o tables.o
OBJS_DECOMP =${OBJS_XDR} dump.o

#Mike's holding dump_4gl.c back for now - not in CVS
OBJS_4GL    =${OBJS_XDR} dump_4gl.o
REPORT_H    =report.h

## ==================================================================
##                    Settings
## ==================================================================

4GLPC       =${SH} 4glpc

CFLAGS      +=-I.

#we don't want -Wall in CFLAGS when compiling form_x_xdr.c because it would
#give us bunch of warnings about unused varibles, that we cannot fix
#because this file is generated by rpcgen:
CFLAGS_REPORT_XDR_C		=$(CFLAGS:%-Wall=%)

ALL =aace adecompile
#aace_4gl
#generate_aace

## ==================================================================
##                    Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) successfully compiled."

aace: ${OBJS}
	${4GLPC} $(CFLAGS) $^ -o $@
	${CP} $@ ${ROOT}/bin

adecompile: ${REPORT_H} ${OBJS_DECOMP}
	${CC} $(CFLAGS) ${OBJS_DECOMP} -o $@
	${CP} $@ ${ROOT}/bin

#Cannot compile because dump_4gl.c is missing from CVS
aace_4gl : ${REPORT_H} ${OBJS_4GL}
	${4GLPC} $(CFLAGS) ${OBJS_4GL} -o $@

#test that depend on database name
generate_aace : generate.4gl
	${4GLPC} $^ -o $@
	./$@ mips_3_3 systables

## ==================================================================
##                    Sub-Targets
## ==================================================================

y.tab.c: ace.yacc
	${YACC} -v $^

lex.yy.c: ace.lex
	${LEX} -i $^

y.tab.o: y.tab.c lex.yy.c ${REPORT_H}
	${CC} $(CFLAGS) -c y.tab.c -o $@

data.o: ${REPORT_H} data.c
	${CC} $(CFLAGS) -c data.c -o $@

report_xdr.o: report_xdr.c
	${CC} ${CFLAGS_REPORT_XDR_C} -c -o $@ $^


${REPORT_H} report_xdr.c: report.x
	@RPCGEN@ $^


## ==================================================================
##                    Other targets
## ==================================================================

test: aace_4gl aace
	aace m1.ace
	touch t1.4gl t1.err
	${RM} t1.4gl t1.err
	aace_4gl m1.aarc > t1.4gl
	4glc t1.4gl
	${4GLPC} -g t1.c -o t1


test2: generate_aace aace_4gl
	./generate_aace mips_3_3 systables
	./aace systables.aace
	./aace_4gl systables.aarc > systables.4gl
	4glc systables.4gl
	${4GLPC} -g systables.c -o systables

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ${ROOT}/${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

## ==================================================================
##                    Clean
## ==================================================================

#ace.lex   CVS     dump.c        main.c    Makefile.in   output.c
#ace.yacc  data.c  generate.4gl  Makefile  report.x


clean:
	${RM} *.bak lex.yy.c y.tab.c report_xdr.c ${REPORT_H} y.output *.o \
	*.a *.so *.err aace decompile


