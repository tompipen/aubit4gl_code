ROOT        =../..
LIBROOT     =${ROOT}/lib

#All stuff common to more then one Aubit compiler make file is there:
include ${ROOT}/incl/Makefile-common

## ==================================================================
##                    Source code
## ==================================================================

ifeq "${USE_RPCGEN}" "0"
	#RPCGEN      =${CP} ${ROOT}/tools/cygwin/form_x_xdr.c ${ROOT}/tools/cygwin/form_x.h .
    CMODS_XDR   =${ROOT}/tools/cygwin/report_xdr.c
	REPORT_H    =${ROOT}/tools/cygwin/report.h
else
	#RPCGEN 		=@RPCGEN@ form_x.x
    CMODS_XDR   =report_xdr.c
	REPORT_H    =report.h
endif

ifeq "@YACC@" "no"
	#LEX_YY_C	=${ROOT}/tools/no_yacc/cygwin/compilers/fcompile/lex.yy.c
	Y_TAB_C		=${ROOT}/tools/no_yacc/cygwin/compilers/ace/y.tab.c
	CFLAGS      +=-I${ROOT}/tools/cygwin -I${ROOT}/tools/no_rpc/cygwin
else
	#LEX_YY_C	=lex.yy.c
	Y_TAB_C		=y.tab.c
endif



CMODS       =${CMODS_XDR} ${Y_TAB_C} main.c data.c output.c tables.c fileio.c
CMODS_DECOMP=${CMODS_XDR} dump.c
#Mike's holding dump_4gl.c back for now - not in CVS
CMODS_4GL    =${CMODS_XDR} dump_4gl.c
CMODS_PERL   =${CMODS_XDR} ${Y_TAB_C} dump_perl.c data.c output.c tables.c fileio.c
OBJS_XDR    =${CMODS_XDR:.c=.o}
OBJS		=${CMODS:.c=.o}
OBJS_DECOMP =${CMODS_DECOMP:.c=.o}
OBJS_4GL    =${CMODS_4GL:.c=.o}
OBJS_PERL   =${CMODS_PERL:.c=.o} 

## ==================================================================
##                    Settings
## ==================================================================

4GLPC       =${SH} ${ROOT}/bin/4glpc

CFLAGS      +=-I.

#we don't want -Wall in CFLAGS when compiling rpcgen created c code because it
#would give us bunch of warnings about unused varibles, that we cannot fix
CFLAGS_REPORT_XDR_C		=$(CFLAGS:%-Wall=%)

ALL 		=${ROOT}/bin/aace ${ROOT}/bin/adecompile ${ROOT}/bin/aace_perl ${ROOT}/bin/aace_4gl

ifeq "@HAVE_RPCLIB@" "0"
	ifeq "${TARGET_OS}" "cygwin"
        #On Windows unresolved symbols are not alloved at link time, and we have no RPCLIB:
		ALL=norpclib
    endif
endif

ifeq "${TARGET_OS}" "cygwin"
	LINKLIBS	=-L${LIBROOT} -laubit4gl @RPCLIB_LFLAGS@ ${RPCLIB_NAME}
endif

#aace_4gl
#generate_aace

ifeq "${TARGET_OS}" "solaris"
	LINK_LIBS		=-lnsl
endif

## ==================================================================
##                    Targets
## ==================================================================

all: ${ALL}
	@echo "Default targets (${ALL}) successfully compiled."

${ROOT}/bin/aace: ${OBJS}
#	${4GLPC} $(CFLAGS) $^ -o $@
	${LD_EXE} -o $@  ${AUBIT_LIB} $^ ${LINK_LIBS} -L${LIBROOT} ${LINKLIBS}
#	${CP} $@ ${ROOT}/bin

${ROOT}/bin/adecompile: ${REPORT_H} ${OBJS_DECOMP}
#	${CC} $(CFLAGS) ${OBJS_DECOMP} -o $@
	${LD_EXE} -o $@ ${AUBIT_LIB} ${OBJS_DECOMP} ${LINK_LIBS} -L${LIBROOT} ${LINKLIBS}
#	${CP} $@ ${ROOT}/bin

#Cannot compile because dump_4gl.c is missing from CVS
${ROOT}/bin/aace_4gl : ${REPORT_H} ${OBJS_4GL}
	${4GLPC} $(CFLAGS) ${OBJS_4GL} -o $@

#Cannot compile because dump_perl.c is missing from CVS
${ROOT}/bin/aace_perl : ${REPORT_H} ${OBJS_PERL}
	${4GLPC} $(CFLAGS) ${OBJS_PERL} -o $@

norpclib:
	@echo "RPCLIB not detected, cannot link. Skipping all in ace..."

## ==================================================================
##                    Sub-Targets
## ==================================================================

y.tab.c: ace.yacc
	${YACC} -v $^

lex.yy.c: ace.lex
	${LEX} -i $^

y.tab.o: ${Y_TAB_C} lex.yy.c ${REPORT_H}
	${CC} $(CFLAGS) -c ${Y_TAB_C} -o $@

data.o: ${REPORT_H} data.c
	${CC} $(CFLAGS) -c data.c -o $@

report_xdr.o: report_xdr.c
	${CC} ${CFLAGS_REPORT_XDR_C} -c -o $@ $^


${REPORT_H} report_xdr.c: report.x
	@RPCGEN@ $^


## ==================================================================
##                    Testing
## ==================================================================

#test that depends on database name
generate_aace : generate.4gl
	${4GLPC} $^ -o $@
	./$@ mips_3_3 systables


test: aace_4gl aace
	aace m1.ace
	touch t1.4gl t1.err
	${RM} t1.4gl t1.err
	aace_4gl m1.aarc > t1.4gl
	4glc t1.4gl
	${4GLPC} -g t1.c -o t1


test2: generate_aace aace_4gl
	./generate_aace mips_3_3 systables
	./aace systables.aace
	./aace_4gl systables.aarc > systables.4gl
	4glc systables.4gl
	${4GLPC} -g systables.c -o systables

## ==================================================================
##                    Clean
## ==================================================================

clean:
	${RM} *.bak .*.bak lex.yy.c y.tab.c report_xdr.c ${REPORT_H} y.output *.o \
	*.a *${SO_EXT} *.err aace adecompile debug.out


## ==================================================================
##                         Other Targets
## ==================================================================

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ${ROOT}/${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

