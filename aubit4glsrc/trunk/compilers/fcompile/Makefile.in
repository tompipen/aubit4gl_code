#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

4GLPC			=../../bin/4glpc
C_LOCAL_IFLAGS  =-I../../lib/libincl -I.
CFLAGS 			+=${C_LOCAL_IFLAGS} @CURSES_INC_PATH@ @RPCLIB_INCLUDE@
LCLINT_CFLAGS   =${C_IFLAGS} ${C_LOCAL_IFLAGS}
EXE_CFLAGS      +=-I../../lib/libincl -I. ${C_IFLAGS}

ALL	 			=fcompile fdecompile fshow


ifeq "$(OUTPUTLANG)" "java"
	ALL		 	+=fdecompile-j
endif

ifeq "${USE_RPCGEN}" "0"
	RPCGEN      =cp ../../tools/cygwin/form_x_xdr.c ../../tools/cygwin/form_x.h .
else
	RPCGEN 		=@RPCGEN@ form_x.x
endif

#we don't want -Wall in CFLAGS when compiling form_x_xdr.c because it would
#give us bunch of warnings about unused varibles, that we cannot fix
#because this file is generated by rpcgen:
CFLAGS_FORM_X_XDR_C =$(CFLAGS:%-Wall=%)


## ==================================================================
##                             Source files
## ==================================================================

#This files now make -lFORM_XDR
#../compilers/fcompile/form_x_xdr.c readforms.c formwrite2.c
#FIXME: add source files that use xdr_ Sun libRPC functions (decompile.c)
#to -lFORM_XDR

SOURCES.c		=fcompile.c where.c
SOURCES.yacc 	=screen.yacc
SOURCES.lex 	=screen.lex
TARGETS.c 		=y.tab.c
DUMP_C          =dump.c
#FIXME: dump_java.c was never commited into CVS
DUMP_JAVA       =dump_java.c
DECOMPILE       =decompile.c

CMODS           =$(SOURCES.c) $(TARGETS.c)
OBJECTS 		=$(CMODS:%.c=%.o)

ifeq "@YACC@" "no"
	LEX_YY_C	=../../tools/no_yacc/cygwin/compilers/fcompile/lex.yy.c
	Y_TAB_C_DEP	=../../tools/no_yacc/cygwin/compilers/fcompile/y.tab.c

else
	LEX_YY_C	=lex.yy.c
	Y_TAB_C_DEP	=$(SOURCES.yacc) ${LEX_YY_C}
endif

## ==================================================================
##                             Targets
## ==================================================================

all: $(ALL)
	@echo "Default targets (${ALL}) successfully compiled."

fcompile: $(OBJECTS)
	${CC} ${EXE_CFLAGS} -L../../lib -o $@ $^ ${AUBIT_LIB}
	${LN} ./$@${EXE} ../../bin/$@${EXE}

fdecompile-j : ${DECOMPILE} ${DUMP_JAVA}
	${CC} ${EXE_CFLAGS} -L../../lib $^ -o $@ ${AUBIT_LIB}
	${LN} ./$@ ../../bin

fdecompile : ${DECOMPILE} ${DUMP_C}
	${CC} ${EXE_CFLAGS} -L../../lib $^ -o $@ ${AUBIT_LIB}
	${LN} ./$@ ../../bin

fshow : fshow.4gl
	${FAIL_OK}${SH} ${4GLPC} $^ -o $@
	${FAIL_OK}${LN} ./$@ ../../bin

## ==================================================================
##                          Sub targets
## ==================================================================

y.tab.c: ${Y_TAB_C_DEP}
ifeq "@YACC@" "no"
	${CP} ${Y_TAB_C_DEP} .
else
	${NICE} ${YACC} -v  $(SOURCES.yacc)
endif

lex.yy.c: $(SOURCES.lex)
ifeq "@LEX@" "no"
	${CP} ${LEX_YY_C} .
else
	${NICE} ${LEX} $(SOURCES.lex)
endif

rpc: form_x_xdr.c
form_x.h form_x_xdr.c: form_x.x
	${RPCGEN}

form_x_xdr.o: form_x_xdr.c
	${CC} ${CFLAGS_FORM_X_XDR_C} -c -o $@ $^

## ==================================================================
##                          Dependencies
## ==================================================================

y.tab.o: 		lex.yy.c
formwrite2.o :  form_x.h
fcompile.o :  	form_x.h
where.o : 		form_x.h


## ==================================================================
##                          Clean Targets
## ==================================================================

clean:
#do NOT remove lex.yy.c and y.tab.c
	$(RM) fcompile fcompile-noodbc $(OBJECTS) $(TARGETS.c) *.BAK *.delta \
	core *~ *.ln *.output *.bak *.exe lex.yy.c form_x.h form_x_xdr.c \
	*.err fdecompile-j fdecompile fshow-gtk fshow fshow.c *.out \
    *.o *.glb fshow.h

## ==================================================================
##                         Other Targets
## ==================================================================

splint: lclint
lclint: $(CMODS)
	${LCLINTERR}${LCLINTEXE} ${LCLINTFLAGS} $(LCLINT_CFLAGS) $(CMODS) > ${LCLINTLOG} ${LCLINTLOGCMD}
	${CAT} ${LCLINTLOG} >> ../../${LCLINT_GLOBAL_LOG}
	@echo "see ${LCLINTLOG} for results"

