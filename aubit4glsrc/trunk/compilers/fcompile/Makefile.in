#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

#FIXME: use 4glpc ONLY for 4gl code:
4GLPCFLAGS		=-make-compile ${LINK_COMPILERS} -verbose -L../../lib
CFLAGS 			+=-I../../lib/libincl -I. @CURSES_INC_PATH@ @RPCLIB_INCLUDE@

#FIXME: we should compile dummy executables in any case, so we can use them instead
#of real ones when installing binary distro on system with missing RPClib:
ifeq "@HAVE_RPCLIB@" "0"
	ALL			=norpclib
else
	ALL	 		=fcompile fshow fdecompile
endif

ifeq "$(OUTPUTLANG)" "java"
	ALL		 	+=fdecompile-j
endif

ifeq "${USE_RPCGEN}" "0"
	RPCGEN      =cp ../../tools/cygwin/form_x_xdr.c ../../tools/cygwin/form_x.h .
else
	RPCGEN 		=@RPCGEN@ form_x.x
endif

## ==================================================================
##                             Source files
## ==================================================================

#This files now make -lFORM_XDR
#../compilers/fcompile/form_x_xdr.c readforms.c
#FIXME: add source files that use xdr_ Sun libRPC functions (formwrite2.c and decompile.c)
#to -lFORM_XDR

SOURCES.c		=fcompile.c formwrite2.c where.c
SOURCES.yacc 	=screen.yacc
SOURCES.lex 	=screen.lex
TARGETS.c 		=y.tab.c
DUMP_C          =dump.c
#FIXME: dump_java.c was never commited into CVS
DUMP_JAVA       =dump_java.c
DECOMPILE       =decompile.c
OBJECTS 		=$(SOURCES.c:%.c=%.o) $(TARGETS.c:%.c=%.o)

ifeq "@YACC@" "no"
	LEX_YY_C	=../../tools/no_yacc/cygwin/compilers/fcompile/lex.yy.c
	Y_TAB_C_DEP	=../../tools/no_yacc/cygwin/compilers/fcompile/y.tab.c

else
	LEX_YY_C	=lex.yy.c
	Y_TAB_C_DEP	=$(SOURCES.yacc) ${LEX_YY_C}
endif

## ==================================================================
##                             Targets
## ==================================================================

all: $(ALL)
	@echo "Default targets (${ALL}) successfully compiled."

fcompile: $(SOURCES.c) $(TARGETS.c) $(OBJECTS)
	${CC} ${CFLAGS} -L../../lib -o $@ ${OBJECTS} ${AUBIT_LIB} -lFORM_XDR
	${LN} $@${EXE} ../../bin/$@${EXE}

fdecompile-j : ${DECOMPILE} ${DUMP_JAVA}
	${CC} ${CFLAGS} -L../../lib $^ -o $@ ${AUBIT_LIB} -lFORM_XDR
	${CP} $@ ../../bin

fdecompile : ${DECOMPILE} ${DUMP_C}
	${CC} ${CFLAGS} -L../../lib $^ -o $@ ${AUBIT_LIB} -lFORM_XDR
	${CP} $@ ../../bin

fshow : fshow.4gl
	${SH} ../../bin/4glpc fshow.4gl -o fshow
	${CP} $@ ../../bin

norpclib:
#we will make some fake executables, to simplify installation and RPM builds:
	${CC} fnorpclib.c -o fcompile
	${CC} fnorpclib.c -o fdecompile
	${CC} fnorpclib.c -o fshow
	${CP} fcompile fdecompile fshow ../../bin
	@echo "Sun RPClib was not detected - no form related functionality will be compiled"

## ==================================================================
##                          Sub targets
## ==================================================================

y.tab.c: ${Y_TAB_C_DEP}
ifeq "@YACC@" "no"
	cp ${Y_TAB_C_DEP} .
else
	nice -20 ${YACC} -v  $(SOURCES.yacc)
endif

lex.yy.c: $(SOURCES.lex)
ifeq "@LEX@" "no"
	cp ${LEX_YY_C} .
else
	nice -20 flex -i $(SOURCES.lex)
endif

form_x_xdr.c: form_x.x
	${RPCGEN}

## ==================================================================
##                          Dependencies
## ==================================================================

#form_x_xdr.c: rpc
form_x.h: 		rpc
rpc: 			form_x_xdr.c
y.tab.o: 		lex.yy.c
formwrite2.o :  form_x.h
fcompile.o :  	form_x.h
where.o : 		form_x.h


## ==================================================================
##                          Clean Targets
## ==================================================================

clean:
#do NOT remove lex.yy.c and y.tab.c OR...
	$(RM) fcompile fcompile-noodbc $(OBJECTS) $(TARGETS.c) *.BAK *.delta \
	core *~ *.ln *.output *.bak *.exe lex.yy.c form_x.h form_x_xdr.c \
	*.err fdecompile-j fdecompile fshow-gtk fshow fshow.c *.out \
    *.o *.glb fshow.h

## ==================================================================
##                         Other Targets
## ==================================================================

lint:
	lint -n -lansic $(CPPFLAGS) $(SOURCES.c) $(TARGETS.c)

