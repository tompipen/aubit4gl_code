#All stuff common to more then one Aubit compiler make file is there:
include ../../incl/Makefile-common

override NOINCL=0

## ==================================================================
##                              Options
## ==================================================================

4GLPCFLAGS		=-make-compile -static -verbose -nogtk -L../../lib
CFLAGS 			+=-I../../lib -I.
ALL		 		= fcompile fshow

ifeq "$(OUTPUTLANG)" "java"
	ALL		 	+=fdecompile-j
endif

ifeq "${USE_RPCGEN}" "0"
	RPCGEN      = cp ../../tools/cygwin/form_x_xdr.c ../../tools/cygwin/form_x.h .
else
	RPCGEN 		= @RPCGEN@ form_x.x
endif


ifdef COMSPEC
#	RPCGEN      = cp ../../tools/cygwin/form_x_xdr.c ../../tools/cygwin/form_x.h .
#	4GLPCFLAGS	+=${SO_GCCFLAGS}
	CYGWIN_FLAGS=${RPCLIB_NAME}
#else
#	RPCGEN 		= @RPCGEN@ form_x.x
#	4GLPCFLAGS	+=-rdynamic
endif

#ifeq "$(ODBC_LINK)" "static" #static linking for SQL access libs
#	ifeq "$(ODBC)" "no"
#		4GLPCFLAGS	+= -noodbc
#	else
#		ALL 	+= fcompile-noodbc
#	endif
#endif

#ifeq "$(PDFBUILD)" "yes"
#	4GLPCFLAGS	+=-lpdf
#else
#	4GLPCFLAGS	+=-nopdf
#endif

SRC_COMMON      =fcompile.c formwrite2.c where.c

SCRIPT 			=

ifeq "@HAVE_RPCLIB@" "0"
	SOURCES.c 		=${SRC_COMMON}
else
	SOURCES.c 		=${SRC_COMMON} form_x_xdr.c
	ALL            +=fdecompile
endif

SOURCES.h 		=
SOURCES.yacc 	=screen.yacc
SOURCES.lex 	= screen.lex

# Derived parameters.
SOURCES 		= $(SOURCES.h) $(SOURCES.lex) $(SOURCES.yacc) $(SOURCES.c)
TARGETS.c 		= y.tab.c
TARGETS 		= $(TARGETS.c)
OBJECTS 		= $(SOURCES.c:%.c=%.o) $(TARGETS.c:%.c=%.o)
LINTFILES 		= $(SOURCES.c:%.c=%.ln) $(TARGETS.c:%.c=%.ln)

ifeq "@YACC@" "no"
	Y_TAB_C_DEP	=../../tools/no_yacc/cygwin/compilers/fcompile/y.tab.c
else
	Y_TAB_C_DEP	=$(SOURCES.yacc) lex.yy.c
endif

LEX_YY_C        =../../tools/no_yacc/cygwin/compilers/fcompile/lex.yy.c

CFLAGS			+=@RPCLIB_INCLUDE@

## ==================================================================
##                             Targets
## ==================================================================

all:	 $(ALL)
	@echo "Default targets (${ALL}) successfully compiled."

objects: $(SOURCES.c) $(TARGETS.c) $(OBJECTS)
sources: $(SOURCES)
targets: $(SOURCES) $(TARGETS)

fcompile: $(SOURCES.c) $(TARGETS.c) $(TARGETS.h) $(OBJECTS) ../../lib/libaclall.a
	${SH} ../../bin/4glpc ${4GLPCFLAGS} -o $@ $(OBJECTS)
	${LN} fcompile${EXE} ../../bin/fcompile${EXE}

fcompile-noodbc: $(SOURCES.c) $(TARGETS.c) $(TARGETS.h) $(OBJECTS) ../../lib/libaclall-noodbc.a
	${SH} ../../bin/4glpc -noodbc ${4GLPCFLAGS} -o $@ $(OBJECTS)
	${LN} fcompile-noodbc${EXE} ../../bin/fcompile-noodbc${EXE}

y.tab.c: ${Y_TAB_C_DEP}
ifeq "@YACC@" "no"
	cp ${Y_TAB_C_DEP} .
else
	nice -20 ${YACC} -v  $(SOURCES.yacc)
endif

y.tab.o: lex.yy.c

lex.yy.c: $(SOURCES.lex)
ifeq "@LEX@" "no"
	cp ${LEX_YY_C} .
else
	nice -20 flex -i $(SOURCES.lex)
endif

fcompile.h: fcompile.c
	@touch $@


#form_x_xdr.c: rpc

rpc: form_x_xdr.c

form_x_xdr.c: form_x.x
	${RPCGEN}

formwrite2.o :  form_x.h
fcompile.o :  form_x.h
where.o : form_x.h


## ==================================================================
##                          Install targets
## ==================================================================

install:
	install -m 555 fcompile $(SCRIPT) $(AWADI)/db_tools

## ==================================================================
##                          Clean Targets
## ==================================================================

clean:
#do NOT remove lex.yy.c and y.tab.c OR...
	$(RM) fcompile fcompile-noodbc $(OBJECTS) $(TARGETS.c) *.BAK *.delta \
	core *~ *.ln *.output *.bak *.exe lex.yy.c form_x.h form_x_xdr.c \
	*.err fdecompile-j fdecompile fshow-gtk fshow fshow.c

## ==================================================================
##                         Other Targets
## ==================================================================

lint:
	/usr/5bin/lint -n -lansic $(CPPFLAGS) $(SOURCES.c) $(TARGETS.c)

fdecompile-j : decompile.c form_x_xdr.c dump_java.c
	${CC} ${CFLAGS} decompile.c form_x_xdr.c dump_java.c -o $@
	cp $@ ../../bin

fdecompile : decompile.c form_x_xdr.c dump.c
ifeq "@HAVE_RPCLIB@" "0"
#:rpc_norpc.c: undefined reference to `exitwith'
	${CC} ${CFLAGS} decompile.c ../../lib/rpc_norpc.o dump.c -o $@ ${CYGWIN_FLAGS}
else
	${CC} ${CFLAGS} decompile.c form_x_xdr.c dump.c -o $@ ${CYGWIN_FLAGS}
endif
	cp $@ ../../bin

fshow : fshow.4gl
	-${SH} ../../bin/4glpc -nogtk fshow.4gl -o fshow
	-cp $@ ../../bin

fshow-gtk : fshow.4gl
	-${SH} ../../bin/4glpc -verbose -gtk -DGTK fshow.4gl -o fshow-gtk
	-cp $@ ../../bin

