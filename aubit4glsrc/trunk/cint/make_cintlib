export CINTSYSDIR=/opt/cint
export PATH=$PATH:$CINTSYSDIR

USEAUBIT_PATH=`aubit-config AUBITDIR`
#USEAUBIT_PATH=$AUBITDIR
#clint will hard-code thsi path, can't use relative paths:
#USEAUBIT_PATH=..

LD_LIBRARY_PATH=.:$CINTSYSDIR:$LD_LIBRARY_PATH
LD_ELF_LIBRARY_PATH=$LD_LIBRARY_PATH
export LD_LIBRARY_PATH LD_ELF_LIBRARY_PATH


rm -f makefile G__cpp_libA4GL_cint.C G__cpp_libA4GL_cint.h


makecint -mk makefile -dl libA4GL_cint.so -p -H a4gl_cint_4gldef.h -l $USEAUBIT_PATH/lib/libaubit4gl.so

make -f makefile

cp libA4GL_cint.so ../lib
